      <relation id="r1419" name="part_of" from="o12217" to="o12218" negation="false" />
    </statement>
    <statement id="59.txt-13">
      <text>Corollas lavender or purple (white), 16–32 mm, tubes 7–15 mm, throats 4.5–10 mm (noticeably wider than tubes ) , lobes 4–8 mm;</text>
      <structure id="o12219" name="corolla">
        <character name="coloration" value="lavender" />
        <character name="coloration" value="purple" />
        <character char_type="range_value" name="size" from="16" from_unit="mm" to="32" to_unit="mm" />
      </structure>
      <structure id="o12220" name="tube">
        <character char_type="range_value" name="size" from="7" from_unit="mm" to="15" to_unit="mm" />
      </structure>
      <structure id="o12221" name="throat">
