        <character char_type="range_value" name="width" from="1" from_unit="cm" to="5" to_unit="cm" />
        <character name="shape" value="unlobed" />
        <character char_type="range_value" name="shape" from="spinulose" to="irregularly dentate or pinnatifid" />
        <character name="shape" value="spinulose" />
        <character name="shape" value="dentate" modifier="irregularly" />
        <character name="shape" value="pinnatifid" modifier="irregularly" />
