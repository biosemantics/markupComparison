        <character name="count" value="single" modifier="usually" />
        <character name="orientation" value="erect" />
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="tomentose" modifier="±" />
        <character name="pubescence" value="villous" modifier="sometimes sparsely" constraint="with trichomes" constraintid="o14587" />
      </structure>
      <structure id="o14587" name="trichome">
        <character name="architecture" value="septate" />
      </structure>
    </statement>
    <statement id="70.txt-3">
      <text>branches few, usually distal, ascending.</text>
      <structure id="o14588" name="branch">
        <character name="count" value="few" />
        <character name="insertion_or_position" value="distal" modifier="usually" />
        <character name="orientation" value="ascending" />
      </structure>
    </statement>
    <statement id="70.txt-4">
      <text>Leaves:</text>
      <structure id="o14589" name="leaf" />
    </statement>
    <statement id="70.txt-5">
      <text>blades linear to oblanceolate or elliptic, 10–30 × 1–5 cm, unlobed and spinulose to irregularly dentate or pinnatifid, lobes narrowly to broadly triangular, sometimes coarsely toothed or lobed toward base, acuminate, main spines slender, 1–5 mm, abaxial faces gray-tomentose, adaxial glabrous or sparsely villous with septate trichomes;</text>
