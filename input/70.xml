      <structure id="o14592" name="base" />
      <structure id="o14593" name="spine" constraint="main">
        <character name="size" value="slender" />
        <character char_type="range_value" name="size" from="1" from_unit="mm" to="5" to_unit="mm" />
      </structure>
      <structure id="o14594" name="face" constraint="abaxial">
        <character name="pubescence" value="gray-tomentose" />
        <character name="insertion_or_position" value="adaxial" />
        <character name="pubescence" value="glabrous" />
