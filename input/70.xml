    <statement id="70.txt-1">
      <text>taproots short with many slender, fibrous lateral roots.</text>
      <structure id="o14584" name="taproot">
        <character name="size" value="short" constraint="with roots" constraintid="o14585" />
      </structure>
      <structure id="o14585" name="root" constraint="fibrous lateral">
        <character name="count" value="many" />
        <character name="size" value="slender" />
      </structure>
    </statement>
    <statement id="70.txt-2">
      <text>Stems usually single, erect, glabrous to ± tomentose, sometimes sparsely villous with septate trichomes;</text>
