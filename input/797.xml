        <character char_type="range_value" name="shape" from="obtuse" to="rounded" />
        <character name="shape" value="obtuse" />
        <character name="shape" value="rounded" />
      </structure>
      <structure id="o16816" name="appendage" />
    </statement>
    <statement id="797.txt-16">
      <text>Cypselae mostly monomorphic within heads, usually columnar, cylindric, ellipsoid, or fusiform, sometimes ± prismatic, sometimes compressed or flattened, not beaked, bodies smooth or ribbed (glabrous or ± hirsutulous, hairs straight-tipped, uncinate, or glochidiform, faces sometimes glandular as well);</text>
      <structure id="o16817" name="cypsela">
        <character name="habit" value="monomorphic" modifier="mostly" constraint="within heads" constraintid="o16818" />
        <character name="shape" value="columnar" modifier="usually" />
        <character name="shape" value="cylindric" modifier="usually" />
        <character name="shape" value="ellipsoid" modifier="usually" />
        <character name="shape" value="fusiform" modifier="usually" />
        <character name="shape" value="prismatic" modifier="sometimes ±" />
        <character name="shape" value="compressed" modifier="sometimes" />
        <character name="shape" value="flattened" modifier="sometimes" />
        <character name="shape" value="beaked" modifier="not" />
      </structure>
      <structure id="o16818" name="head" />
      <structure id="o16819" name="body">
        <character name="architecture" value="smooth" />
        <character name="architecture" value="ribbed" />
      </structure>
    </statement>
    <statement id="797.txt-17">
      <text>pappi [sometimes 0] persistent or tardily falling, usually of smooth to barbellate [plumose] bristles or setiform scales (in 1–2 series).</text>
      <structure id="o16820" name="pappus">
        <character name="duration" value="persistent" />
        <character name="orientation" value="falling" modifier="tardily" />
      </structure>
      <structure id="o16821" name="bristle">
        <character char_type="range_value" name="architecture" from="smooth" to="barbellate" />
        <character name="architecture" value="smooth" />
        <character name="architecture" value="barbellate" />
