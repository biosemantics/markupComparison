        <character name="insertion_or_position" value="proximal" />
      </structure>
    </statement>
    <statement id="780.txt-3">
      <text>Leaves mostly cauline, petiolate, distal scarcely congested, ± equal to proximal, largest 6–32 × 3–8(–10) mm;</text>
