        <character name="life_style" value="biennial" />
      </structure>
    </statement>
    <statement id="352.txt-2">
      <text>blades of undivided cauline leaves ± ovate, margins denticu-late (sometimes ± ciliate), midribs usually piloso-setose.</text>
      <structure id="o6569" name="blade">
        <character name="shape" value="ovate" modifier="±" />
      </structure>
      <structure id="o6570" name="leaf" constraint="undivided cauline" />
