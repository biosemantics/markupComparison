        <character name="shape" value="denticu-late" />
      </structure>
      <structure id="o6572" name="midrib">
        <character name="pubescence" value="piloso-setose" modifier="usually" />
      </structure>
    </statement>
    <statement id="352.txt-3">
      <text>Heads in corymbiform to paniculiform arrays.</text>
      <structure id="o6573" name="head" />
      <structure id="o6574" name="array">
        <character char_type="range_value" name="architecture" from="corymbiform" to="paniculiform" />
