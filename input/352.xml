  <description>
    <statement id="352.txt-0">
      <text>Biennials, 15–80(–120) cm.</text>
      <structure id="o6568" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="80" to="120" from_unit="cm" to_unit="cm" from_inclusive="false" />
