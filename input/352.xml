    <statement id="352.txt-6">
      <text>Florets 12–24+;</text>
      <structure id="o6578" name="floret">
        <character char_type="range_value" name="count" from="12" to="24" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="352.txt-7">
      <text>corollas usually yellow, sometimes drying bluish, usually deliquescent.</text>
      <structure id="o6579" name="corolla">
