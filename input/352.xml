      <text>Cypselae:</text>
      <structure id="o6580" name="cypsela" />
    </statement>
    <statement id="352.txt-9">
      <text>bodies brown, ± flattened, elliptic, 4.5–5+ mm, beaks ± filiform, 2.5–3.5 mm, faces 1(–3)-nerved;</text>
      <structure id="o6581" name="body">
        <character name="coloration" value="brown" />
        <character name="shape" value="flattened" modifier="±" />
