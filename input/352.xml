      </structure>
      <relation id="r818" name="in" from="o6573" to="o6574" negation="false" />
    </statement>
    <statement id="352.txt-4">
      <text>Involucres 12–18+ mm.</text>
      <structure id="o6575" name="involucre">
        <character char_type="range_value" name="size" from="12" from_unit="mm" to="18" to_unit="mm" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="352.txt-5">
      <text>Phyllaries usually reflexed in fruit.</text>
      <structure id="o6576" name="phyllary">
