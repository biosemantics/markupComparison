        <character char_type="range_value" name="size" from="4.5" from_unit="mm" to="5" to_unit="mm" upper_restricted="false" />
      </structure>
      <structure id="o6600" name="beak">
        <character name="shape" value="filiform" modifier="±" />
        <character char_type="range_value" name="size" from="2.5" from_unit="mm" to="4.5" to_unit="mm" />
      </structure>
      <structure id="o6601" name="face">
        <character name="architecture" value="1(-3)-nerved" />
      </structure>
    </statement>
    <statement id="353.txt-10">
      <text>pappi white, 5–7(–11) mm.</text>
      <structure id="o6602" name="pappus">
