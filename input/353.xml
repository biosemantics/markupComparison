  <description>
    <statement id="353.txt-0">
      <text>Biennials, 15–150 cm.</text>
      <structure id="o6586" name="whole_organism">
        <character char_type="range_value" name="size" from="15" from_unit="cm" to="150" to_unit="cm" />
        <character name="life_style" value="biennial" />
      </structure>
    </statement>
    <statement id="353.txt-2">
      <text>blades of undivided cauline leaves obovate or oblanceolate to spatulate, margins denticulate (piloso-ciliate), midribs usually piloso-setose.</text>
      <structure id="o6587" name="blade">
        <character char_type="range_value" name="shape" from="oblanceolate" to="spatulate" />
        <character name="shape" value="obovate" />
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="spatulate" />
      </structure>
      <structure id="o6588" name="leaf" constraint="undivided cauline" />
      <relation id="r819" name="part_of" from="o6587" to="o6588" negation="false" />
      <structure id="o6589" name="margin">
        <character name="shape" value="denticulate" />
      </structure>
      <structure id="o6590" name="midrib">
        <character name="pubescence" value="piloso-setose" modifier="usually" />
      </structure>
    </statement>
    <statement id="353.txt-3">
      <text>Heads in paniculiform arrays.</text>
      <structure id="o6591" name="head" />
      <structure id="o6592" name="array">
        <character name="architecture" value="paniculiform" />
      </structure>
      <relation id="r820" name="in" from="o6591" to="o6592" negation="false" />
    </statement>
    <statement id="353.txt-4">
      <text>Involucres 12–15+ mm.</text>
      <structure id="o6593" name="involucre">
        <character char_type="range_value" name="size" from="12" from_unit="mm" to="15" to_unit="mm" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="353.txt-5">
      <text>Phyllaries usually reflexed in fruit.</text>
      <structure id="o6594" name="phyllary">
        <character name="orientation" value="reflexed" modifier="usually" constraint="in fruit" constraintid="o6595" />
      </structure>
      <structure id="o6595" name="fruit" />
    </statement>
    <statement id="353.txt-6">
      <text>Florets 20–50+;</text>
      <structure id="o6596" name="floret">
        <character char_type="range_value" name="count" from="20" to="50" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="353.txt-7">
      <text>corollas usually yellow, sometimes bluish, usually deliquescent.</text>
      <structure id="o6597" name="corolla">
        <character name="coloration" value="yellow" modifier="usually" />
        <character name="coloration" value="bluish" modifier="sometimes" />
        <character name="architecture_or_texture" value="deliquescent" modifier="usually" />
