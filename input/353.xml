    </statement>
    <statement id="353.txt-8">
      <text>Cypselae:</text>
      <structure id="o6598" name="cypsela" />
    </statement>
    <statement id="353.txt-9">
      <text>bodies brown to blackish (usually mottled), ± flattened, elliptic, 4.5–5+ mm, beaks ± filiform, 2.5–4.5 mm, faces 1(–3)-nerved;</text>
      <structure id="o6599" name="body">
        <character char_type="range_value" name="coloration" from="brown" to="blackish" />
