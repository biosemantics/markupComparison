      <structure id="o19089" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="929.txt-6">
      <text>Heads radiate, borne singly.</text>
      <structure id="o19090" name="head">
        <character name="architecture_or_arrangement" value="radiate" />
        <character name="arrangement" value="singly" />
      </structure>
    </statement>
    <statement id="929.txt-7">
      <text>Involucres hemispheric or broader, (4–)4.5–6(–6.5) mm diam.</text>
      <structure id="o19091" name="involucre">
