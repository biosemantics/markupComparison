        <character char_type="range_value" name="width" from="2" from_unit="cm" to="4" to_unit="cm" />
        <character name="shape" value="2-3-pinnatifid" />
      </structure>
      <structure id="o18502" name="face">
        <character name="pubescence" value="glabrous" />
        <character name="coloration_or_relief" value="gland-dotted" />
      </structure>
    </statement>
    <statement id="893.txt-4">
      <text>Heads (nodding, peduncles 2–5 mm) in open, (diffusely branched, leafy) arrays 15–30(–40) × 10–20 cm.</text>
