      </structure>
      <relation id="r1955" name="in" from="o18503" to="o18504" negation="false" />
    </statement>
    <statement id="893.txt-5">
      <text>Involucres globose, 1.5–2.5 × 1.5–2.5 mm.</text>
      <structure id="o18505" name="involucre">
        <character name="shape" value="globose" />
        <character char_type="range_value" name="length" from="1.5" from_unit="mm" to="2.5" to_unit="mm" />
