        <character char_type="range_value" name="count" from="9" to="12" />
      </structure>
      <relation id="r1331" name="consist_of" from="o11555" to="o11556" negation="false" />
      <relation id="r1332" name="consist_of" from="o11555" to="o11557" negation="false" />
    </statement>
