      <structure id="o2535" name="branch" constraint="styles" />
    </statement>
    <statement id="189.txt-16">
      <text>fused portions with basal nodes minutely hairy, distinct portions minute .</text>
      <structure id="o2536" name="portion" constraint="fused" />
