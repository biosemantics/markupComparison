  <description>
    <statement id="189.txt-0">
      <text>Annuals or biennials , 20–70 cm;</text>
      <structure id="o2510" name="whole_organism">
        <character char_type="range_value" name="size" from="20" from_unit="cm" to="70" to_unit="cm" />
        <character name="life_style" value="annual" />
        <character name="life_style" value="biennial" />
      </structure>
    </statement>
    <statement id="189.txt-1">
      <text>herbage not prickly, glabrate.</text>
      <structure id="o2512" name="herbage">
        <character name="architecture" value="prickly" modifier="not" />
        <character name="pubescence" value="glabrate" />
      </structure>
    </statement>
    <statement id="189.txt-2">
      <text>Stems erect , usually branched from near bases.</text>
      <structure id="o2513" name="stem">
        <character name="orientation" value="erect" />
        <character name="architecture_or_shape" value="branched" modifier="usually" constraint="from bases" constraintid="o2514" />
      </structure>
      <structure id="o2514" name="base" />
    </statement>
    <statement id="189.txt-3">
      <text>Leaves basal and cauline (distal smaller);</text>
    </statement>
    <statement id="189.txt-4">
      <text>petiolate (basal and proximal cauline) or sessile (distal cauline);</text>
      <structure id="o2515" name="leaf">
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="petiolate" />
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="189.txt-5">
      <text>blade margins dentate or ± lobed (basal) or entire to lobed (cauline).</text>
      <structure id="o2516" name="margin" constraint="blade">
        <character name="shape" value="dentate" />
        <character name="shape" value="lobed or entire to lobed" />
        <character char_type="range_value" name="shape" from="entire" to="lobed" modifier="±" />
        <character name="shape" value="lobed" modifier="±" />
        <character name="shape" value="entire" modifier="±" />
        <character name="shape" value="lobed" modifier="±" />
      </structure>
    </statement>
    <statement id="189.txt-6">
      <text>Heads ± radiant, borne singly.</text>
