        <character char_type="range_value" name="size" from="12" from_unit="mm" to="16" to_unit="mm" />
      </structure>
    </statement>
    <statement id="189.txt-8">
      <text>Phyllaries many in several series, bases appressed, margins scarious, apices obtuse, inner with oblong, scarious appendages, these entire or spiny.</text>
      <structure id="o2519" name="phyllary">
        <character name="count" value="many" constraint="in series" constraintid="o2520" />
      </structure>
      <structure id="o2520" name="series">
        <character name="count" value="several" />
      </structure>
      <structure id="o2521" name="base">
