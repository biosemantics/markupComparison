      </structure>
      <structure id="o2523" name="apex">
        <character name="shape" value="obtuse" />
        <character name="position" value="inner" constraint="with appendages" constraintid="o2524" />
        <character name="shape" value="entire" />
        <character name="shape" value="spiny" />
      </structure>
      <structure id="o2524" name="appendage">
        <character name="shape" value="oblong" />
        <character name="texture" value="scarious" />
      </structure>
    </statement>
    <statement id="189.txt-9">
      <text>Receptacles flat, epaleate, bearing setiform scales (“flattened bristles”).</text>
      <structure id="o2525" name="receptacle">
        <character name="shape" value="flat" />
        <character name="architecture" value="epaleate" />
      </structure>
      <structure id="o2526" name="scale">
        <character name="shape" value="setiform" />
      </structure>
    </statement>
    <statement id="189.txt-10">
      <text>Florets many;</text>
      <structure id="o2527" name="floret">
        <character name="count" value="many" />
      </structure>
    </statement>
    <statement id="189.txt-11">
