  <description>
    <statement id="58.txt-0">
      <text>Biennials or sometimes perennials , 80–200 cm;</text>
      <structure id="o11931" name="whole_organism">
        <character char_type="range_value" name="size" from="80" from_unit="cm" to="200" to_unit="cm" />
        <character name="life_style" value="biennial" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="58.txt-1">
      <text>taproots and often cluster of coarse fibrous roots, roots without tuberlike enlargements.</text>
      <structure id="o11933" name="taproot" />
      <structure id="o11934" name="root" constraint="fibrous">
        <character name="arrangement" value="cluster" modifier="often" />
        <character name="texture" value="coarse" />
      </structure>
      <structure id="o11935" name="root" />
