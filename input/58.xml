      </structure>
      <structure id="o11944" name="margin">
        <character name="shape_or_vernation" value="revolute" />
        <character name="orientation" value="ascending" />
        <character char_type="range_value" name="shape" from="spinulose" to="remotely few toothed or sharply lobed" />
        <character name="shape" value="entire" />
        <character name="shape" value="spinulose" />
        <character name="shape" value="lobed" modifier="sharply" />
