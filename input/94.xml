      </structure>
      <relation id="r2033" name="with" from="o19331" to="o19332" negation="false" />
    </statement>
    <statement id="94.txt-15">
      <text>apices of inner often flexuous, flat, scarious, serrulate to expanded and pectinately fringed.</text>
      <structure id="o19333" name="apex">
        <character name="course" value="flexuous" modifier="often" />
        <character name="shape" value="flat" />
        <character name="texture" value="scarious" />
        <character name="shape" value="serrulate" />
        <character name="size" value="expanded" />
        <character name="shape" value="fringed" modifier="pectinately" />
      </structure>
      <structure id="o19334" name="phyllary" constraint="inner" />
      <relation id="r2034" name="part_of" from="o19333" to="o19334" negation="false" />
    </statement>
    <statement id="94.txt-16">
      <text>Corollas lavender to reddish purple, (16–)19–22 mm, tubes 6–9 mm, throats 5–8 mm, lobes 5–7 mm, style tips 5–6 mm.</text>
      <structure id="o19335" name="corolla">
        <character char_type="range_value" name="coloration" from="lavender" to="reddish-purple" />
        <character name="coloration" value="lavender" />
        <character name="coloration" value="purple" modifier="reddish" />
        <character char_type="range_value" name="atypical_size" from="16" to="19" from_unit="mm" to_unit="mm" to_inclusive="false" />
        <character char_type="range_value" name="size" from="19" from_unit="mm" to="22" to_unit="mm" />
      </structure>
      <structure id="o19336" name="tube">
        <character char_type="range_value" name="size" from="6" from_unit="mm" to="9" to_unit="mm" />
      </structure>
      <structure id="o19337" name="throat">
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="8" to_unit="mm" />
      </structure>
      <structure id="o19338" name="lobe">
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="7" to_unit="mm" />
      </structure>
      <structure id="o19339" name="tip" constraint="style">
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="6" to_unit="mm" />
      </structure>
    </statement>
    <statement id="94.txt-17">
      <text>Cypselae dark brown, 4–5 mm, apical collars stramineous or not differently colored, very narrow;</text>
      <structure id="o19340" name="cypsela">
        <character name="coloration" value="brown" modifier="dark" />
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="5" to_unit="mm" />
      </structure>
      <structure id="o19341" name="collar" constraint="apical">
        <character name="coloration" value="stramineous" />
        <character name="coloration" value="colored" modifier="not differently" />
        <character name="size" value="narrow" modifier="very" />
      </structure>
