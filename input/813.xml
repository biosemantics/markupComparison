        <character char_type="range_value" name="width" from="4" from_unit="mm" to="5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="813.txt-7">
      <text>Phyllaries pink to lavender or cream, proximally stipitate- or sessile-glandular, distally densely stipitate-glandular (outermost ovate-lanceolate, lengths usually 1 times inner, rarely only 0.5 times inner).</text>
      <structure id="o17129" name="phyllary">
        <character char_type="range_value" name="coloration" from="pink" to="lavender or cream" />
        <character name="coloration" value="pink" />
        <character name="coloration" value="lavender" />
        <character name="coloration" value="cream" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-or-sessile-glandular" modifier="proximally" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" modifier="distally densely" />
      </structure>
    </statement>
    <statement id="813.txt-8">
      <text>Corollas pink to lavender or cream or pinkish to rosy.</text>
      <structure id="o17130" name="corolla">
        <character char_type="range_value" name="coloration" from="pink" to="lavender or cream or pinkish" />
        <character name="coloration" value="pink" />
