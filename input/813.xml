  <common_name>Yucatan camphorweed</common_name>
  <description>
    <statement id="813.txt-0">
      <text>Perennials, 20–60 cm;</text>
    </statement>
    <statement id="813.txt-1">
      <text>probably fibrous-rooted.</text>
      <structure id="o17120" name="whole_organism">
        <character char_type="range_value" name="size" from="20" from_unit="cm" to="60" to_unit="cm" />
        <character name="life_style" value="perennial" />
        <character name="architecture" value="fibrous-rooted" modifier="probably" />
      </structure>
    </statement>
    <statement id="813.txt-2">
      <text>Stems ± stipitate- or sessile-glandular, otherwise glabrous.</text>
      <structure id="o17121" name="stem">
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-or-sessile-glandular" modifier="±" />
        <character name="pubescence" value="glabrous" modifier="otherwise" />
      </structure>
    </statement>
    <statement id="813.txt-3">
      <text>Leaves sessile;</text>
      <structure id="o17122" name="leaf">
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="813.txt-4">
      <text>blades (leathery, slightly succulent, shiny) oblong-obovate to oblong-oblanceolate or broadly lance-olate, 3–5 × (0.6–)1.5–2 cm (bases subclasping and sub-auriculate), margins serrulate, faces ± stipitate- or sessile-glandular, otherwise glabrous or distalmost minutely puberulent.</text>
      <structure id="o17123" name="blade">
        <character char_type="range_value" name="shape" from="oblong-obovate" to="oblong-oblanceolate or broadly lance-olate" />
        <character name="shape" value="oblong-obovate" />
        <character name="shape" value="oblong-oblanceolate" />
        <character name="shape" value="lance-olate" modifier="broadly" />
        <character char_type="range_value" name="length" from="3" from_unit="cm" to="5" to_unit="cm" />
        <character char_type="range_value" name="atypical_width" from="0.6" to="1.5" from_unit="cm" to_unit="cm" to_inclusive="false" />
        <character char_type="range_value" name="width" from="1.5" from_unit="cm" to="2" to_unit="cm" />
      </structure>
      <structure id="o17124" name="margin">
        <character name="shape" value="serrulate" />
      </structure>
      <structure id="o17125" name="face">
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-or-sessile-glandular" modifier="±" />
        <character name="pubescence" value="glabrous" modifier="otherwise" />
      </structure>
    </statement>
    <statement id="813.txt-5">
      <text>Heads in corymbiform arrays.</text>
      <structure id="o17126" name="head" />
      <structure id="o17127" name="array">
        <character name="architecture" value="corymbiform" />
      </structure>
      <relation id="r1842" name="in" from="o17126" to="o17127" negation="false" />
    </statement>
    <statement id="813.txt-6">
      <text>Involucres turbinate to campanulate, 5–6 × 4–5 mm.</text>
      <structure id="o17128" name="involucre">
        <character char_type="range_value" name="shape" from="turbinate" to="campanulate" />
        <character name="shape" value="turbinate" />
