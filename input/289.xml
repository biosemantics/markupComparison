      </structure>
    </statement>
    <statement id="289.txt-6">
      <text>Involucres 11–16 mm.</text>
      <structure id="o5148" name="involucre">
        <character char_type="range_value" name="size" from="11" from_unit="mm" to="16" to_unit="mm" />
      </structure>
    </statement>
    <statement id="289.txt-7">
      <text>Phyllaries sparsely setose (setae blackish).</text>
      <structure id="o5149" name="phyllary">
        <character name="pubescence" value="setose" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="289.txt-8">
      <text>Cypselae deep greenish to blackish or deep reddish brown, 7–12 mm, tapered distally, not distinctly beaked;</text>
      <structure id="o5150" name="cypsela">
        <character char_type="range_value" name="coloration" from="deep greenish" to="blackish or deep reddish-brown" />
        <character name="coloration" value="blackish" />
        <character name="coloration" value="brown" modifier="deep reddish" />
        <character char_type="range_value" name="size" from="7" from_unit="mm" to="12" to_unit="mm" />
