  <description>
    <statement id="289.txt-0">
      <text>Plants 10–35 cm;</text>
      <structure id="o5142" name="whole_organism">
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="35" to_unit="cm" />
        <character name="life_style" value="plant" />
      </structure>
    </statement>
    <statement id="289.txt-1">
      <text>setae yellowish, ± straight.</text>
      <structure id="o5143" name="seta">
        <character name="coloration" value="yellowish" />
        <character name="course" value="straight" modifier="±" />
      </structure>
    </statement>
    <statement id="289.txt-2">
      <text>Stems (slender, always with primary axes, branched near or beyond middles) sparsely setose (setae yellowish).</text>
      <structure id="o5144" name="stem">
        <character name="pubescence" value="setose" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="289.txt-3">
      <text>Leaves:</text>
      <structure id="o5145" name="leaf" />
    </statement>
    <statement id="289.txt-4">
      <text>petioles setose;</text>
      <structure id="o5146" name="petiole">
        <character name="pubescence" value="setose" />
      </structure>
    </statement>
    <statement id="289.txt-5">
      <text>blades (narrowly elliptic), 10–20 × 2–4 cm.</text>
      <structure id="o5147" name="blade">
        <character char_type="range_value" name="length" from="10" from_unit="cm" to="20" to_unit="cm" />
