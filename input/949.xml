      </structure>
      <structure id="o19616" name="face">
        <character name="pubescence" value="glabrous" />
        <character name="relief" value="scabrellous" modifier="±" />
        <character name="pubescence" value="hirtellous" />
        <character name="pubescence" value="villous" />
        <character name="pubescence" value="pilose" />
        <character name="pubescence" value="arachnose" />
        <character name="pubescence" value="glabrescent" />
      </structure>
    </statement>
