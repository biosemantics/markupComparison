      </structure>
      <relation id="r1953" name="in" from="o18472" to="o18473" negation="false" />
    </statement>
    <statement id="891.txt-5">
      <text>Involucres ovoid, (1–)2–3.5 × (1–)2–2.5 mm.</text>
      <structure id="o18474" name="involucre">
        <character name="shape" value="ovoid" />
        <character char_type="range_value" name="atypical_length" from="1" to="2" from_unit="mm" to_unit="mm" to_inclusive="false" />
        <character char_type="range_value" name="length" from="2" from_unit="mm" to="3.5" to_unit="mm" />
        <character char_type="range_value" name="atypical_width" from="1" to="2" from_unit="mm" to_unit="mm" to_inclusive="false" />
        <character char_type="range_value" name="width" from="2" from_unit="mm" to="2.5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="891.txt-6">
      <text>Phyllaries oblong-elliptic, sparsely hairy.</text>
      <structure id="o18475" name="phyllary">
        <character name="arrangement_or_shape" value="oblong-elliptic" />
        <character name="pubescence" value="hairy" modifier="sparsely" />
