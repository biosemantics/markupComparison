        <character name="pubescence" value="hairy" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="891.txt-2">
      <text>Leaves cauline, dark green;</text>
      <structure id="o18469" name="leaf">
        <character name="insertion_or_position" value="cauline" />
        <character name="coloration" value="green" modifier="dark" />
      </structure>
    </statement>
    <statement id="891.txt-3">
      <text>blades broadly ovate, (2–)3–6 × 0.02–0.15 cm, 2–3-pinnatifid (lobes linear or filiform), faces sparsely hairy (abaxial) or glabrous (adaxial).</text>
      <structure id="o18470" name="blade">
        <character name="shape" value="ovate" modifier="broadly" />
        <character char_type="range_value" name="atypical_length" from="2" to="3" from_unit="cm" to_unit="cm" to_inclusive="false" />
