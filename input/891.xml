        <character name="odor" value="aromatic" />
        <character name="life_style" value="perennial" />
        <character name="life_style" value="subshrub" />
      </structure>
    </statement>
    <statement id="891.txt-1">
      <text>Stems relatively numerous, erect, brown, branched, (woody, brittle), glabrous or sparsely hairy.</text>
      <structure id="o18468" name="stem">
        <character name="count" value="numerous" modifier="relatively" />
        <character name="orientation" value="erect" />
