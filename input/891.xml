        <character name="pubescence" value="glabrous" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="891.txt-4">
      <text>Heads (nodding at maturity) in open, widely branched arrays 10–30 × 2–10 cm.</text>
      <structure id="o18472" name="head" />
      <structure id="o18473" name="array" constraint="branched">
        <character name="architecture" value="open" />
