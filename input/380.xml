  <species_name>Sonchus oleraceus</species_name>
  <authority>Linnaeus</authority>
  <place_of_publication>Sp. Pl. 2: 794. 1753</place_of_publication>
  <common_name>Common sow-thistle, laiteron</common_name>
  <description>
    <statement id="380.txt-0">
      <text>Annuals or biennials , 10–140(–200) cm.</text>
      <structure id="o7244" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="140" to="200" from_unit="cm" to_unit="cm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="140" to_unit="cm" />
        <character name="life_style" value="annual" />
        <character name="life_style" value="biennial" />
      </structure>
    </statement>
    <statement id="380.txt-1">
      <text>Stem bases soft to hard, herbaceous, often hollow.</text>
      <structure id="o7246" name="base" constraint="stem">
        <character name="texture" value="soft" />
        <character name="texture" value="hard" />
        <character name="habit_or_texture" value="herbaceous" />
        <character name="architecture" value="hollow" modifier="often" />
      </structure>
    </statement>
    <statement id="380.txt-2">
      <text>Leaves:</text>
      <structure id="o7247" name="leaf" />
    </statement>
    <statement id="380.txt-3">
      <text>blades of mid cauline spatulate or oblong to obovate or lanceolate, 6–35 × 1–15 cm, bases auriculate, auricles deltate to lanceolate, ± straight, acute, margins usually pinnately (often runcinately) lobed, lobes ± deltate to lanceolate, not constricted at bases, terminals usually larger than laterals, entire or dentate.</text>
      <structure id="o7248" name="blade">
        <character char_type="range_value" name="shape" from="oblong" to="obovate or lanceolate" />
        <character name="shape" value="spatulate" />
        <character name="shape" value="oblong" />
        <character name="shape" value="obovate" />
        <character name="shape" value="lanceolate" />
        <character char_type="range_value" name="length" from="6" from_unit="cm" to="35" to_unit="cm" />
        <character char_type="range_value" name="width" from="1" from_unit="cm" to="15" to_unit="cm" />
      </structure>
      <structure id="o7249" name="leaf" constraint="mid cauline" />
      <relation id="r887" name="part_of" from="o7248" to="o7249" negation="false" />
      <structure id="o7250" name="base">
        <character name="shape" value="auriculate" />
      </structure>
      <structure id="o7251" name="auricle">
        <character char_type="range_value" name="shape" from="deltate" to="lanceolate" />
        <character name="shape" value="deltate" />
        <character name="shape" value="lanceolate" />
        <character name="course" value="straight" modifier="±" />
        <character name="shape" value="acute" />
      </structure>
      <structure id="o7252" name="margin">
        <character name="shape" value="lobed" modifier="usually pinnately" />
      </structure>
      <structure id="o7253" name="lobe">
        <character char_type="range_value" name="shape" from="deltate" to="lanceolate" modifier="±" />
        <character name="shape" value="deltate" modifier="±" />
        <character name="shape" value="lanceolate" modifier="±" />
        <character name="size" value="constricted" modifier="not" constraint="at bases" constraintid="o7254" />
      </structure>
      <structure id="o7254" name="base" />
      <structure id="o7255" name="terminal">
        <character name="size" value="larger" modifier="usually" constraint="than laterals" constraintid="o7256" />
        <character name="shape" value="entire" />
        <character name="shape" value="dentate" />
      </structure>
      <structure id="o7256" name="lateral" />
    </statement>
    <statement id="380.txt-4">
      <text>Peduncles usually glabrous, sometimes stipi-tate-glandular.</text>
      <structure id="o7257" name="peduncle">
        <character name="pubescence" value="glabrous" modifier="usually" />
        <character name="architecture_or_exudation_or_pubescence" value="stipi-tate-glandular" modifier="sometimes" />
      </structure>
    </statement>
    <statement id="380.txt-5">
      <text>Involucres 9–13+ mm.</text>
      <structure id="o7258" name="involucre">
        <character char_type="range_value" name="size" from="9" from_unit="mm" to="13" to_unit="mm" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="380.txt-6">
      <text>Phyllaries usually glabrous, sometimes tomentose and/or stipitate-glandular.</text>
      <structure id="o7259" name="phyllary">
        <character name="pubescence" value="glabrous" modifier="usually" />
        <character name="pubescence" value="tomentose" modifier="sometimes" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="380.txt-7">
      <text>Corollas:</text>
      <structure id="o7260" name="corolla" />
    </statement>
    <statement id="380.txt-8">
      <text>ligules ± equaling tubes.</text>
      <structure id="o7261" name="ligule" />
      <structure id="o7262" name="tube">
        <character name="comparison" value="equaling" modifier="±" />
      </structure>
    </statement>
    <statement id="380.txt-9">
      <text>Cypselae dark brown, mostly oblanceoloid, 2.5–3.5+ mm, ribs 2–4 on each face, faces transversely rugulose or tuberculate across and between ribs;</text>
      <structure id="o7263" name="cypsela">
        <character name="coloration" value="brown" modifier="dark" />
        <character name="shape" value="oblanceoloid" modifier="mostly" />
        <character char_type="range_value" name="size" from="2.5" from_unit="mm" to="3.5" to_unit="mm" upper_restricted="false" />
      </structure>
      <structure id="o7264" name="rib">
        <character char_type="range_value" name="count" from="2" to="4" constraint="on face" constraintid="o7265" />
      </structure>
      <structure id="o7265" name="face" />
      <structure id="o7266" name="face">
        <character name="relief" value="rugulose" modifier="transversely" />
        <character name="relief" value="tuberculate" modifier="transversely" constraint="across and between ribs" constraintid="o7267" />
      </structure>
      <structure id="o7267" name="rib" />
    </statement>
    <statement id="380.txt-10">
      <text>pappi 5–8 mm.</text>
      <structure id="o7268" name="pappus">
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="8" to_unit="mm" />
      </structure>
    </statement>
    <statement id="380.txt-11">
      <text>2 n = 32, 36.</text>
      <structure id="o7269" name="chromosome">
        <character name="count" value="32" />
        <character name="count" value="36" />
      </structure>
    </statement>
