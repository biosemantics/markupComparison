  <description>
    <statement id="971.txt-0">
      <text>Shrubs, 20–100 cm.</text>
      <structure id="o19967" name="whole_organism">
        <character char_type="range_value" name="size" from="20" from_unit="cm" to="100" to_unit="cm" />
        <character name="life_style" value="shrub" />
      </structure>
    </statement>
    <statement id="971.txt-1">
      <text>Stems 1+, erect, branched distally, puberulent, glabrescent.</text>
      <structure id="o19968" name="stem">
        <character name="count" char_type="range_value" from="1" upper_restricted="false" />
        <character name="orientation" value="erect" />
        <character name="architecture_or_shape" value="branched" modifier="distally" />
        <character name="pubescence" value="puberulent" />
        <character name="pubescence" value="glabrescent" />
      </structure>
    </statement>
    <statement id="971.txt-2">
      <text>Leaves cauline (mostly clustered distally on stems);</text>
    </statement>
    <statement id="971.txt-3">
      <text>alternate;</text>
    </statement>
    <statement id="971.txt-4">
      <text>sessile;</text>
      <structure id="o19969" name="leaf">
        <character name="insertion_or_position" value="cauline" />
        <character name="arrangement" value="alternate" />
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="971.txt-5">
      <text>blades oblong or spatulate to lanceolate (bases cuneate), margins distally toothed or entire, faces glabrous or hirtellous.</text>
      <structure id="o19970" name="blade">
        <character char_type="range_value" name="shape" from="spatulate" to="lanceolate" />
        <character name="shape" value="oblong" />
        <character name="shape" value="spatulate" />
        <character name="shape" value="lanceolate" />
      </structure>
      <structure id="o19971" name="margin">
        <character name="shape" value="toothed" modifier="distally" />
        <character name="shape" value="entire" modifier="distally" />
      </structure>
      <structure id="o19972" name="face">
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="hirtellous" />
      </structure>
    </statement>
    <statement id="971.txt-6">
      <text>Heads radiate, borne singly.</text>
      <structure id="o19973" name="head">
        <character name="architecture_or_arrangement" value="radiate" />
        <character name="arrangement" value="singly" />
      </structure>
    </statement>
    <statement id="971.txt-7">
      <text>Involucres hemispheric or broader, 15–20 mm diam.</text>
      <structure id="o19974" name="involucre">
        <character name="shape" value="hemispheric" />
        <character name="size" value="broader" />
        <character char_type="range_value" name="size" from="15" from_unit="mm" to="20" to_unit="mm" />
      </structure>
    </statement>
    <statement id="971.txt-8">
      <text>Phyllaries persistent, 30–50+ in ± 4 series, distinct, lanceolate, oblong, obovate, or ovate (not carinate), unequal, margins and apices scarious.</text>
      <structure id="o19975" name="phyllary">
        <character name="duration" value="persistent" />
        <character char_type="range_value" name="count" from="30" to="50" upper_restricted="false" constraint="in series" constraintid="o19976" />
        <character name="fusion" value="distinct" />
        <character name="shape" value="lanceolate" />
        <character name="shape" value="oblong" />
        <character name="shape" value="obovate" />
        <character name="shape" value="ovate" />
        <character name="size" value="unequal" />
      </structure>
      <structure id="o19976" name="series">
        <character name="count" value="4" modifier="±" />
      </structure>
      <structure id="o19977" name="margin" />
      <structure id="o19978" name="apex">
        <character name="texture" value="scarious" />
      </structure>
    </statement>
    <statement id="971.txt-9">
      <text>Receptacles convex, epaleate.</text>
      <structure id="o19979" name="receptacle">
        <character name="shape" value="convex" />
        <character name="architecture" value="epaleate" />
      </structure>
    </statement>
    <statement id="971.txt-10">
      <text>Ray florets 21–34+, pistillate, fertile;</text>
      <structure id="o19980" name="floret" constraint="ray">
        <character char_type="range_value" name="count" from="21" to="34" upper_restricted="false" />
        <character name="architecture" value="pistillate" />
        <character name="reproduction" value="fertile" />
      </structure>
    </statement>
    <statement id="971.txt-11">
      <text>corollas white, laminae ± ovate to linear.</text>
      <structure id="o19981" name="corolla">
        <character name="coloration" value="white" />
      </structure>
      <structure id="o19982" name="lamina">
        <character char_type="range_value" name="shape" from="ovate" to="linear" modifier="±" />
        <character name="shape" value="ovate" modifier="±" />
        <character name="shape" value="linear" modifier="±" />
      </structure>
    </statement>
    <statement id="971.txt-12">
      <text>Disc florets [50–]80–250+, bisexual, fertile;</text>
      <structure id="o19983" name="floret" constraint="disc">
        <character char_type="range_value" name="atypical_count" from="50" to="80" to_inclusive="false" />
        <character char_type="range_value" name="count" from="80" to="250" upper_restricted="false" />
        <character name="reproduction" value="bisexual" />
        <character name="reproduction" value="fertile" />
      </structure>
    </statement>
    <statement id="971.txt-13">
      <text>corollas yellow [red or purple], tubes cylindric (not basally dilated, usually gland-dotted), throats ± campanulate, lobes 5, deltate (without resin sacs).</text>
      <structure id="o19984" name="corolla">
        <character name="coloration" value="yellow" />
      </structure>
      <structure id="o19985" name="tube">
        <character name="shape" value="cylindric" />
      </structure>
      <structure id="o19986" name="throat">
        <character name="shape" value="campanulate" modifier="±" />
      </structure>
      <structure id="o19987" name="lobe">
        <character name="count" value="5" />
        <character name="shape" value="deltate" />
      </structure>
    </statement>
    <statement id="971.txt-14">
      <text>Cypselae ± columnar, ribs 8–10 (not winged), faces probably glabrous (pericarps without myxogenic cells or resin sacs);</text>
      <structure id="o19988" name="cypsela">
        <character name="shape" value="columnar" modifier="±" />
      </structure>
      <structure id="o19989" name="rib">
        <character char_type="range_value" name="count" from="8" to="10" />
      </structure>
      <structure id="o19990" name="face">
        <character name="pubescence" value="glabrous" modifier="probably" />
      </structure>
    </statement>
    <statement id="971.txt-15">
