      <structure id="o5713" name="angle">
        <character name="angle" value="right" />
      </structure>
      <structure id="o5714" name="face" constraint="abaxial">
        <character name="pubescence" value="tomentulose" modifier="basally" />
        <character name="insertion_or_position" value="adaxial" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="316.txt-9">
      <text>Florets ca. 30;</text>
      <structure id="o5715" name="floret">
        <character name="count" value="30" />
      </structure>
