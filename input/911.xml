  <synonym_of_subspecies_name>Artemisia candicans Rydberg, Bull. Torrey Bot. Club 24: 296. 1897; A. gracilenta A. Nelson; A. latiloba (Nuttall) Rydberg; A. ludoviciana var. candicans (Rydberg) H. St. John; A. ludoviciana var. latiloba Nuttall; A. vulgaris Linnaeus subsp. candicans (Rydberg) H. M. Hall &amp; Clements; A. vulgaris var. candicans (Rydberg) M. Peck</synonym_of_subspecies_name>
  <description>
    <statement id="911.txt-0">
      <text>Stems 30–50(–80) cm, mostly simple, sparsely tomentose.</text>
      <structure id="o18815" name="stem">
        <character char_type="range_value" name="atypical_size" from="50" to="80" from_unit="cm" to_unit="cm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="30" from_unit="cm" to="50" to_unit="cm" />
        <character name="architecture" value="simple" modifier="mostly" />
        <character name="pubescence" value="tomentose" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="911.txt-1">
      <text>Leaves ± white;</text>
      <structure id="o18816" name="leaf">
        <character name="coloration" value="white" modifier="±" />
      </structure>
    </statement>
    <statement id="911.txt-2">
      <text>blades broadly obovate to oblong, 4–10 × 1.5–4 cm, relatively deeply lobed (lobes, lanceolate, 1 / 3 + blade lengths, acute), faces tomentose (usually less densely adaxially).</text>
      <structure id="o18817" name="blade">
        <character char_type="range_value" name="shape" from="broadly obovate" to="oblong" />
        <character name="shape" value="obovate" modifier="broadly" />
        <character name="shape" value="oblong" modifier="broadly" />
        <character char_type="range_value" name="length" from="4" from_unit="cm" to="10" to_unit="cm" />
        <character char_type="range_value" name="width" from="1.5" from_unit="cm" to="4" to_unit="cm" />
        <character name="shape" value="lobed" modifier="relatively deeply" />
      </structure>
      <structure id="o18818" name="face">
        <character name="pubescence" value="tomentose" />
      </structure>
    </statement>
    <statement id="911.txt-3">
      <text>Heads in racemiform arrays 4–7 × 2–4 cm.</text>
      <structure id="o18819" name="head" />
      <structure id="o18820" name="array">
        <character name="architecture" value="racemiform" />
        <character char_type="range_value" name="length" from="4" from_unit="cm" to="7" to_unit="cm" />
        <character char_type="range_value" name="width" from="2" from_unit="cm" to="4" to_unit="cm" />
      </structure>
      <relation id="r1993" name="in" from="o18819" to="o18820" negation="false" />
    </statement>
    <statement id="911.txt-4">
      <text>Involucres (broadly campanulate), 4–5 × 4–8 mm.</text>
      <structure id="o18821" name="involucre">
        <character char_type="range_value" name="length" from="4" from_unit="mm" to="5" to_unit="mm" />
        <character char_type="range_value" name="width" from="4" from_unit="mm" to="8" to_unit="mm" />
      </structure>
    </statement>
    <statement id="911.txt-5">
      <text>Florets:</text>
      <structure id="o18822" name="floret" />
    </statement>
    <statement id="911.txt-6">
      <text>pistillate 8–10;</text>
      <structure id="o18823" name="floret" constraint="pistillate">
        <character char_type="range_value" name="count" from="8" to="10" />
      </structure>
    </statement>
    <statement id="911.txt-7">
      <text>bisexual 20–30;</text>
      <structure id="o18824" name="floret" constraint="bisexual">
        <character char_type="range_value" name="count" from="20" to="30" />
      </structure>
    </statement>
    <statement id="911.txt-8">
      <text>corollas 1.5–2 mm.</text>
      <structure id="o18825" name="corolla">
        <character char_type="range_value" name="size" from="1.5" from_unit="mm" to="2" to_unit="mm" />
      </structure>
    </statement>
  </description>
  <habitat>mountains</habitat>
  <habitat>usually in loamy soils</habitat>
  <elevation>1800–3000 m;</elevation>
