        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="glabrous" modifier="nearly" />
      </structure>
    </statement>
    <statement id="64.txt-4">
      <text>Heads 10–20.</text>
      <structure id="o13389" name="head">
        <character char_type="range_value" name="count" from="10" to="20" />
      </structure>
    </statement>
    <statement id="64.txt-5">
      <text>Involucres 4–5 × 5–8 cm, glabrous.</text>
      <structure id="o13390" name="involucre">
        <character char_type="range_value" name="length" from="4" from_unit="cm" to="5" to_unit="cm" />
