    </statement>
    <statement id="64.txt-2">
      <text>Leaves :</text>
      <structure id="o13385" name="leaf" />
    </statement>
    <statement id="64.txt-3">
      <text>blades oblanceolate or oblong-elliptic, 20–40 cm, shallowly to deeply pinnatifid, main spines 10–30 mm, abaxial faces glabrous or nearly so.</text>
      <structure id="o13386" name="blade">
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="oblong-elliptic" />
        <character char_type="range_value" name="size" from="20" from_unit="cm" to="40" to_unit="cm" />
