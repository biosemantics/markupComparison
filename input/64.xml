      <text>Phyllaries :</text>
      <structure id="o13391" name="phyllary" />
    </statement>
    <statement id="64.txt-7">
      <text>outer and middle bodies scabridulous or minutely spinulose, marginal spinules usually 1 mm or shorter.</text>
      <structure id="o13392" name="body" constraint="outer and middle">
        <character name="relief" value="scabridulous" />
