        <character name="architecture" value="branched" modifier="sparingly distally" />
        <character name="size" value="slender" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="337.txt-3">
      <text>Leaves basal and cauline;</text>
    </statement>
    <statement id="337.txt-4">
      <text>petiolate or sessile;</text>
      <structure id="o6231" name="leaf">
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="petiolate" />
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="337.txt-5">
      <text>basal blades oblanceolate, lyrate-pinnately lobed (lateral lobes relatively wide, terminals relatively large);</text>
      <structure id="o6232" name="blade" constraint="basal">
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="lobed" modifier="lyrate-pinnately" />
      </structure>
    </statement>
    <statement id="337.txt-6">
