        <character name="count" value="few" modifier="relatively" />
        <character name="size" value="reduced" />
      </structure>
    </statement>
    <statement id="337.txt-7">
      <text>Heads in loose, corymbiform arrays or borne singly.</text>
      <structure id="o6234" name="head">
        <character name="arrangement" value="singly" />
