  <description>
    <statement id="337.txt-0">
      <text>Annuals [biennials] , 10–20 cm ;</text>
    </statement>
    <statement id="337.txt-1">
      <text>taprooted [occasionally stoloniferous].</text>
      <structure id="o6229" name="whole_organism">
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="20" to_unit="cm" />
        <character name="life_style" value="annual" />
        <character name="architecture" value="taprooted" />
      </structure>
    </statement>
    <statement id="337.txt-2">
      <text>Stems 1–20+ , prostrate, simple or sparingly branched distally, slender, glabrous.</text>
      <structure id="o6230" name="stem">
        <character char_type="range_value" name="count" from="1" to="20" upper_restricted="false" />
        <character name="orientation" value="prostrate" />
