        <character name="architecture_or_exudation_or_pubescence" value="glandular" />
      </structure>
    </statement>
    <statement id="6.txt-7">
      <text>Receptacles reticulate, hispidulous.</text>
      <structure id="o12441" name="receptacle">
        <character name="architecture_or_coloration_or_relief" value="reticulate" />
        <character name="pubescence" value="hispidulous" />
