      <text>Perennials, 40–60(–100) cm (mat-forming), aromatic.</text>
      <structure id="o18370" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="60" to="100" from_unit="cm" to_unit="cm" from_inclusive="false" />
