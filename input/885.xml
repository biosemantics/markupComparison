        <character char_type="range_value" name="atypical_width" from="2" to="10" from_unit="cm" to_unit="cm" to_inclusive="false" />
        <character char_type="range_value" name="atypical_width" from="13" to="15" from_unit="cm" to_unit="cm" from_inclusive="false" />
        <character char_type="range_value" name="width" from="10" from_unit="cm" to="13" to_unit="cm" />
      </structure>
      <relation id="r1946" name="in" from="o18375" to="o18376" negation="false" />
    </statement>
    <statement id="885.txt-5">
      <text>Involucres broadly ovoid, 2–3 × 3–5 mm.</text>
      <structure id="o18377" name="involucre">
        <character name="shape" value="ovoid" modifier="broadly" />
        <character char_type="range_value" name="length" from="2" from_unit="mm" to="3" to_unit="mm" />
        <character char_type="range_value" name="width" from="3" from_unit="mm" to="5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="885.txt-6">
      <text>Phyllaries gray-green, densely sericeous.</text>
      <structure id="o18378" name="phyllary">
        <character name="coloration" value="green" modifier="gray" />
        <character name="pubescence" value="sericeous" modifier="densely" />
      </structure>
    </statement>
    <statement id="885.txt-7">
      <text>Florets:</text>
      <structure id="o18379" name="floret" />
    </statement>
    <statement id="885.txt-8">
      <text>pistillate 9–20;</text>
      <structure id="o18380" name="floret" constraint="pistillate">
