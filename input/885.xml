        <character name="odor" value="aromatic" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="885.txt-1">
      <text>Stems gray-green (sometimes woody proximally), densely canescent to glabrescent (hairs appressed).</text>
      <structure id="o18371" name="stem">
        <character name="coloration" value="green" modifier="gray" />
        <character char_type="range_value" name="pubescence" from="densely canescent" to="glabrescent" />
        <character name="pubescence" value="canescent" modifier="densely" />
        <character name="pubescence" value="glabrescent" modifier="densely" />
      </structure>
    </statement>
    <statement id="885.txt-2">
      <text>Leaves deciduous, gray-green;</text>
      <structure id="o18372" name="leaf">
        <character name="duration_or_habit" value="deciduous" />
        <character name="coloration" value="green" modifier="gray" />
      </structure>
    </statement>
    <statement id="885.txt-3">
      <text>blades broadly ovate, 3–8 × 1–4 cm, mostly pinnately lobed (basal 2–3-pinnatifid, lobes obovate), faces densely canescent.</text>
      <structure id="o18373" name="blade">
        <character name="shape" value="ovate" modifier="broadly" />
        <character char_type="range_value" name="length" from="3" from_unit="cm" to="8" to_unit="cm" />
        <character char_type="range_value" name="width" from="1" from_unit="cm" to="4" to_unit="cm" />
        <character name="shape" value="lobed" modifier="mostly pinnately" />
      </structure>
      <structure id="o18374" name="face">
        <character name="pubescence" value="canescent" modifier="densely" />
      </structure>
    </statement>
    <statement id="885.txt-4">
      <text>Heads (nodding) in open (diffusely branched), paniculiform arrays 10–20(–35) × (2–)10–13(–15) cm.</text>
      <structure id="o18375" name="head" />
      <structure id="o18376" name="array">
        <character name="architecture" value="open" />
        <character name="architecture" value="paniculiform" />
        <character char_type="range_value" name="atypical_length" from="20" to="35" from_unit="cm" to_unit="cm" from_inclusive="false" />
