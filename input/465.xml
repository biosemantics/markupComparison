  <description>
    <statement id="465.txt-0">
      <text>Annuals, 4–36 cm.</text>
      <structure id="o9237" name="whole_organism">
        <character char_type="range_value" name="size" from="4" from_unit="cm" to="36" to_unit="cm" />
        <character name="life_style" value="annual" />
      </structure>
    </statement>
    <statement id="465.txt-1">
      <text>Stems 1–5, erect or ascending, branched mostly distally, glabrous.</text>
      <structure id="o9238" name="stem">
        <character char_type="range_value" name="count" from="1" to="5" />
        <character name="orientation" value="erect" />
        <character name="orientation" value="ascending" />
        <character name="architecture_or_shape" value="branched" modifier="mostly distally" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="465.txt-2">
      <text>Cauline leaves:</text>
      <structure id="o9239" name="leaf" constraint="cauline" />
    </statement>
    <statement id="465.txt-3">
      <text>proximal oblanceolate to lance-linear, sometimes pinnately lobed, not fleshy, ultimate margins usually dentate, faces glabrous;</text>
      <structure id="o9240" name="leaf" constraint="proximal cauline">
        <character name="shape" value="oblanceolate" />
        <character name="arrangement_or_shape" value="lance-linear" />
        <character name="shape" value="lobed" modifier="sometimes pinnately" />
        <character name="texture" value="fleshy" modifier="not" />
      </structure>
      <structure id="o9241" name="margin" constraint="ultimate">
        <character name="shape" value="dentate" modifier="usually" />
      </structure>
      <structure id="o9242" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="465.txt-4">
      <text>distal reduced (margins 2–4-dentate near bases or entire).</text>
      <structure id="o9243" name="leaf" constraint="distal cauline">
        <character name="size" value="reduced" />
      </structure>
    </statement>
    <statement id="465.txt-5">
      <text>Calyculi of 5–12, lance-deltate to lanceolate bractlets, hyaline margins 0.05–0.2 mm.</text>
      <structure id="o9244" name="calyculus" />
      <structure id="o9245" name="bractlet">
        <character char_type="range_value" name="count" from="5" to="12" />
        <character char_type="range_value" name="shape" from="lance-deltate" to="lanceolate" />
        <character name="shape" value="lance-deltate" />
        <character name="shape" value="lanceolate" />
      </structure>
      <relation id="r1077" name="consist_of" from="o9244" to="o9245" negation="false" />
      <structure id="o9246" name="margin">
        <character name="coloration" value="hyaline" />
        <character char_type="range_value" name="size" from="0.05" from_unit="mm" to="0.2" to_unit="mm" />
      </structure>
    </statement>
    <statement id="465.txt-7">
      <text>Phyllaries 8–15+ in 2+ series, lance-linear to linear, ± equal, hyaline margins 0.05–0.3 mm wide, abaxial faces glabrous.</text>
      <structure id="o9247" name="phyllary">
        <character char_type="range_value" name="count" from="8" to="15" upper_restricted="false" constraint="in series" constraintid="o9248" />
        <character char_type="range_value" name="arrangement_or_shape" from="lance-linear" to="linear" />
        <character name="arrangement_or_shape" value="lance-linear" />
        <character name="arrangement_or_shape" value="linear" />
        <character name="size" value="equal" modifier="±" />
      </structure>
      <structure id="o9248" name="series">
        <character name="count" char_type="range_value" from="2" upper_restricted="false" />
      </structure>
      <structure id="o9249" name="margin">
        <character name="coloration" value="hyaline" />
        <character char_type="range_value" name="size" from="0.05" from_unit="mm" to="0.3" to_unit="mm" />
      </structure>
      <structure id="o9250" name="face" constraint="abaxial">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="465.txt-8">
      <text>Receptacles not bristly.</text>
      <structure id="o9251" name="receptacle">
        <character name="pubescence" value="bristly" modifier="not" />
      </structure>
    </statement>
    <statement id="465.txt-9">
      <text>Florets 19–67;</text>
      <structure id="o9252" name="floret">
        <character char_type="range_value" name="count" from="19" to="67" />
      </structure>
    </statement>
    <statement id="465.txt-10">
      <text>corollas pale yellow, 4–7.4 mm;</text>
      <structure id="o9253" name="corolla">
        <character name="coloration" value="yellow" modifier="pale" />
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="7.4" to_unit="mm" />
      </structure>
    </statement>
    <statement id="465.txt-11">
      <text>outer ligules exserted 1–3 mm.</text>
      <structure id="o9254" name="ligule" constraint="outer">
        <character name="position" value="exserted" />
        <character char_type="range_value" name="size" from="1" from_unit="mm" to="3" to_unit="mm" />
      </structure>
    </statement>
    <statement id="465.txt-12">
      <text>Cypselae fusiform or prismatic, 1.2–1.8 mm, ribs extending to apices, 5 more prominent than others;</text>
      <structure id="o9255" name="cypsela">
        <character name="shape" value="fusiform" />
        <character name="shape" value="prismatic" />
        <character char_type="range_value" name="size" from="1.2" from_unit="mm" to="1.8" to_unit="mm" />
      </structure>
      <structure id="o9256" name="rib">
        <character name="count" value="5" />
        <character name="prominence" value="prominent" modifier="more" constraint="than others" constraintid="o9258" />
      </structure>
      <structure id="o9257" name="apex" />
      <relation id="r1078" name="extending to" from="o9256" to="o9257" negation="false" />
      <structure id="o9258" name="other" />
    </statement>
    <statement id="465.txt-13">
      <text>persistent pappi of 15–24+, needlelike teeth plus 1 bristle.</text>
      <structure id="o9259" name="pappus" constraint="persistent" />
      <structure id="o9260" name="tooth">
        <character char_type="range_value" name="count" from="15" to="24" upper_restricted="false" />
