      <structure id="o12084" name="floret">
        <character char_type="range_value" name="count" from="5" to="25" />
      </structure>
    </statement>
    <statement id="582.txt-11">
      <text>corollas yellow, 5–9 mm.</text>
      <structure id="o12085" name="corolla">
        <character name="coloration" value="yellow" />
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="9" to_unit="mm" />
