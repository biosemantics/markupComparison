        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="villous" />
        <character name="pubescence" value="tomentose" constraint="with trichomes" constraintid="o1412" />
      </structure>
      <structure id="o1412" name="trichome">
        <character name="architecture" value="septate" />
      </structure>
    </statement>
    <statement id="151.txt-2">
      <text>Leaves:</text>
      <structure id="o1413" name="leaf" />
    </statement>
    <statement id="151.txt-3">
      <text>blades linear to oblong, oblanceolate, or narrowly elliptic, pinnately lobed or often unlobed, larger leaf spines usually 1 cm or less, abaxial faces glabrous to gray-tomentose, adaxial glabrous or villous with septate trichomes;</text>
      <structure id="o1414" name="blade">
        <character char_type="range_value" name="shape" from="linear" to="oblong , oblanceolate , or narrowly elliptic , pinnately lobed or often unlobed" />
        <character name="shape" value="linear" />
        <character name="shape" value="oblong" />
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="elliptic" modifier="narrowly" />
        <character name="shape" value="lobed" modifier="pinnately" />
        <character name="shape" value="unlobed" modifier="often" />
      </structure>
