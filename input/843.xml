  <common_name>Rock tansy</common_name>
  <synonym_of_species_name>Tanacetum capitatum (Nuttall) Torrey &amp; A. Gray</synonym_of_species_name>
  <description>
    <statement id="843.txt-0">
      <text>Perennials, 5–20 cm (cespitose, bases sometimes woody).</text>
      <structure id="o17727" name="whole_organism">
        <character char_type="range_value" name="size" from="5" from_unit="cm" to="20" to_unit="cm" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="843.txt-1">
      <text>Stems erect, ± tomentose.</text>
      <structure id="o17728" name="stem">
        <character name="orientation" value="erect" />
        <character name="pubescence" value="tomentose" modifier="±" />
      </structure>
    </statement>
    <statement id="843.txt-2">
      <text>Leaves mostly basal;</text>
      <structure id="o17729" name="leaf">
        <character name="insertion_or_position" value="basal" modifier="mostly" />
      </structure>
    </statement>
    <statement id="843.txt-3">
      <text>blades (± cuneate, 8–20 mm) usually 1–2-pinnati-palmately lobed (ultimate lobes ± linear), faces ± tomentose.</text>
      <structure id="o17730" name="blade">
        <character name="shape" value="lobed" modifier="usually 1-2-pinnati-palmately" />
      </structure>
      <structure id="o17731" name="face">
        <character name="pubescence" value="tomentose" modifier="±" />
      </structure>
    </statement>
    <statement id="843.txt-4">
      <text>Heads usually 8–20 in tight, capitate arrays (1–1.3 cm across), sometimes with solitary heads proximal to main arrays.</text>
      <structure id="o17732" name="head">
        <character char_type="range_value" name="count" from="8" to="20" modifier="usually" constraint="in arrays" constraintid="o17733" />
      </structure>
      <structure id="o17733" name="array">
        <character name="texture" value="tight" />
        <character name="architecture_or_shape" value="capitate" />
      </structure>
      <structure id="o17734" name="head">
        <character name="arrangement_or_habit" value="solitary" />
        <character name="insertion_or_position" value="proximal" />
      </structure>
      <relation id="r1879" name="with" from="o17732" to="o17734" negation="false" modifier="sometimes" />
    </statement>
    <statement id="843.txt-5">
      <text>Involucres (2–)3–4 mm.</text>
      <structure id="o17735" name="involucre">
        <character char_type="range_value" name="atypical_size" from="2" to="3" from_unit="mm" to_unit="mm" to_inclusive="false" />
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="4" to_unit="mm" />
      </structure>
    </statement>
    <statement id="843.txt-6">
      <text>Phyllaries 5–8, tomentose.</text>
      <structure id="o17736" name="phyllary">
        <character char_type="range_value" name="count" from="5" to="8" />
        <character name="pubescence" value="tomentose" />
      </structure>
    </statement>
    <statement id="843.txt-7">
      <text>Receptacles glabrous.</text>
      <structure id="o17737" name="receptacle">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="843.txt-8">
      <text>Cypselae 1–2 mm (3–5-ribbed, apices with thickened rims, faces glabrous or sparsely gland-dotted).</text>
      <structure id="o17738" name="cypsela">
        <character char_type="range_value" name="size" from="1" from_unit="mm" to="2" to_unit="mm" />
      </structure>
    </statement>
