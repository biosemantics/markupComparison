        <character name="pubescence" value="glabrescent" modifier="sometimes" />
      </structure>
    </statement>
    <statement id="461.txt-3">
      <text>Leaves basal or subbasal;</text>
    </statement>
    <statement id="461.txt-4">
      <text>petiolate (petioles winged);</text>
      <structure id="o9142" name="leaf">
