        <character name="life_style" value="annual" />
        <character name="architecture" value="taprooted" />
      </structure>
    </statement>
    <statement id="461.txt-2">
      <text>Stems 1–25+, erect or ascending, simple, glabrous or densely tomentose, sometimes glabrescent.</text>
      <structure id="o9141" name="stem">
