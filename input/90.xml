        <character name="pubescence" value="villous" modifier="often" constraint="with trichomes" constraintid="o18619" />
        <character name="insertion_or_position" value="adaxial" />
        <character name="coloration" value="green" />
        <character name="pubescence" value="glabrous" />
      </structure>
      <structure id="o18619" name="trichome">
        <character name="architecture" value="septate" />
      </structure>
      <structure id="o18620" name="vein" />
      <relation id="r1964" name="along" from="o18619" to="o18620" negation="false" />
    </statement>
    <statement id="90.txt-6">
      <text>basal usually present at flowering, sessile or petiolate;</text>
      <structure id="o18621" name="leaf" constraint="basal">
        <character name="presence" value="present" modifier="usually; at flowering" />
        <character name="architecture" value="sessile" />
        <character name="architecture" value="petiolate" />
      </structure>
    </statement>
    <statement id="90.txt-7">
      <text>principal cauline well distributed, proximal usually winged-petiolate, mid sessile, decurrent as spiny wings 1–3 cm;</text>
      <structure id="o18622" name="leaf" constraint="principal cauline">
        <character name="arrangement" value="distributed" modifier="well" />
      </structure>
      <structure id="o18623" name="leaf" constraint="proximal">
        <character name="architecture" value="winged-petiolate" modifier="usually" />
      </structure>
      <structure id="o18624" name="leaf" constraint="mid">
        <character name="architecture" value="sessile" />
        <character name="shape" value="decurrent" constraint="as wings" constraintid="o18625" />
      </structure>
      <structure id="o18625" name="wing">
        <character name="architecture_or_shape" value="spiny" />
        <character char_type="range_value" name="size" from="1" from_unit="cm" to="3" to_unit="cm" />
      </structure>
    </statement>
    <statement id="90.txt-8">
