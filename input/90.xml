      <structure id="o18626" name="leaf" constraint="distal cauline">
        <character name="size" value="reduced" modifier="±" />
      </structure>
    </statement>
    <statement id="90.txt-9">
      <text>Heads few–many, borne singly or clustered in corymbiform, paniculiform, or racemiform arrays at tips of main stem and branches, sometimes also in distal axils not closely subtended by clustered leafy bracts.</text>
      <structure id="o18627" name="head">
        <character char_type="range_value" name="count" from="few" to="many" />
        <character name="arrangement" value="clustered" constraint="in arrays" constraintid="o18628" />
      </structure>
      <structure id="o18628" name="array">
        <character name="architecture" value="corymbiform" />
        <character name="architecture" value="paniculiform" />
        <character name="architecture" value="racemiform" />
      </structure>
      <structure id="o18629" name="tip" />
      <relation id="r1965" name="at" from="o18628" to="o18629" negation="false" />
