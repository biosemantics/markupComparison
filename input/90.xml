        <character name="coloration" value="with maroon to dark-brown subapical patch or appendage" />
        <character char_type="range_value" name="shape" from="linear" to="ovate" />
        <character name="shape" value="linear" />
        <character name="shape" value="ovate" />
      </structure>
      <structure id="o18639" name="series">
        <character char_type="range_value" name="count" from="5" to="6" />
