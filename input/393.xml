        <character name="shape" value="acuminate" />
      </structure>
      <structure id="o7586" name="face" constraint="abaxial">
        <character name="pubescence" value="piloso-hirsute" />
        <character name="pubescence" value="stellate-pubescent" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="393.txt-11">
      <text>Florets (40–)60–80+;</text>
      <structure id="o7587" name="floret">
        <character char_type="range_value" name="atypical_count" from="40" to="60" to_inclusive="false" />
