      <structure id="o7582" name="bractlet">
        <character char_type="range_value" name="count" from="3" to="12" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="393.txt-9">
      <text>Involucres campanulate, 5–7 mm.</text>
