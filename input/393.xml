  <description>
    <statement id="393.txt-0">
      <text>Plants 15–40(–70+) cm.</text>
      <structure id="o7568" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="40" to="70" from_unit="cm" to_unit="cm" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="size" from="15" from_unit="cm" to="40" to_unit="cm" />
        <character name="life_style" value="plant" />
      </structure>
    </statement>
    <statement id="393.txt-1">
      <text>Stems proximally usually piloso-hirsute (hairs 2–4+ mm), rarely glabrous, distally usually glabrous, sometimes piloso-hirsute (hairs 1–3+ mm), stellate-pubescent, and/or stipitate-glandular.</text>
      <structure id="o7569" name="stem">
        <character name="pubescence" value="piloso-hirsute" modifier="proximally usually" />
        <character name="pubescence" value="glabrous" modifier="rarely" />
        <character name="pubescence" value="glabrous" modifier="distally usually" />
        <character name="pubescence" value="piloso-hirsute" modifier="sometimes" />
        <character name="pubescence" value="stellate-pubescent" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="393.txt-2">
      <text>Leaves:</text>
      <structure id="o7570" name="leaf" />
    </statement>
    <statement id="393.txt-3">
      <text>basal 3–8(–20+), cauline 0–2(–4+);</text>
      <structure id="o7571" name="leaf" constraint="basal">
        <character char_type="range_value" name="atypical_count" from="8" to="20" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="count" from="3" to="8" />
      </structure>
      <structure id="o7572" name="leaf" constraint="cauline">
        <character char_type="range_value" name="atypical_count" from="2" to="4" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="count" from="0" to="2" />
      </structure>
    </statement>
    <statement id="393.txt-4">
      <text>blades oblanceolate to lanceolate, 30–100(–150+) × 8–20+ mm, lengths 2.5–8+ times widths, bases cuneate, margins entire or denticulate, apices rounded to acute, faces glabrous or piloso-hirsute (on midribs and at margins, hairs 1–4+ mm).</text>
      <structure id="o7573" name="blade">
        <character char_type="range_value" name="shape" from="oblanceolate" to="lanceolate" />
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="lanceolate" />
        <character char_type="range_value" name="atypical_length" from="100" to="150" from_unit="mm" to_unit="mm" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="length" from="30" from_unit="mm" to="100" to_unit="mm" />
        <character char_type="range_value" name="width" from="8" from_unit="mm" to="20" to_unit="mm" upper_restricted="false" />
        <character name="size" value="widths" modifier="2.5-8+ times" />
      </structure>
      <structure id="o7574" name="base">
        <character name="shape" value="cuneate" />
      </structure>
      <structure id="o7575" name="margin">
        <character name="shape" value="entire" />
        <character name="shape" value="denticulate" />
      </structure>
      <structure id="o7576" name="apex">
        <character char_type="range_value" name="shape" from="rounded" to="acute" />
        <character name="shape" value="rounded" />
        <character name="shape" value="acute" />
      </structure>
      <structure id="o7577" name="face">
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="piloso-hirsute" />
      </structure>
    </statement>
    <statement id="393.txt-5">
      <text>Heads (3–)10–30+ in subumbelliform or corymbiform arrays.</text>
      <structure id="o7578" name="head">
        <character char_type="range_value" name="atypical_count" from="3" to="10" to_inclusive="false" />
        <character char_type="range_value" name="count" from="10" to="30" upper_restricted="false" constraint="in arrays" constraintid="o7579" />
      </structure>
      <structure id="o7579" name="array">
        <character name="architecture" value="subumbelliform" />
        <character name="architecture" value="corymbiform" />
      </structure>
    </statement>
    <statement id="393.txt-6">
      <text>Peduncles piloso-hirsute (hairs 1–2+ mm), stellate-pubescent, and stipitate-glandular.</text>
      <structure id="o7580" name="peduncle">
        <character name="pubescence" value="piloso-hirsute" />
        <character name="pubescence" value="stellate-pubescent" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="393.txt-7">
      <text>Calyculi:</text>
      <structure id="o7581" name="calyculus" />
    </statement>
    <statement id="393.txt-8">
