      <structure id="o7589" name="cypsela">
        <character name="shape" value="columnar" />
        <character char_type="range_value" name="size" from="1.5" from_unit="mm" to="2" to_unit="mm" />
      </structure>
    </statement>
    <statement id="393.txt-14">
      <text>pappi of 25–40+,white bristles in 1 series, 3–4 mm.</text>
      <structure id="o7590" name="pappus">
