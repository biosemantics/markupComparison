        <character name="shape" value="denticulate" />
      </structure>
      <structure id="o6499" name="midrib">
        <character name="pubescence" value="piloso-setose" modifier="sometimes sparsely" />
      </structure>
    </statement>
    <statement id="348.txt-3">
      <text>Heads in paniculiform arrays.</text>
      <structure id="o6500" name="head" />
      <structure id="o6501" name="array">
