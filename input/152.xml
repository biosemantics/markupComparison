    </statement>
    <statement id="152.txt-6">
      <text>Peduncles 0–18 cm.</text>
      <structure id="o1451" name="peduncle">
        <character char_type="range_value" name="size" from="0" from_unit="cm" to="18" to_unit="cm" />
