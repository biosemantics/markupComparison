    <statement id="589.txt-0">
      <text>Annuals, 5–85 cm (herbage glabrous);</text>
    </statement>
    <statement id="589.txt-1">
      <text>taprooted (roots deep, slender to thick).</text>
      <structure id="o12228" name="whole_organism">
        <character char_type="range_value" name="size" from="5" from_unit="cm" to="85" to_unit="cm" />
        <character name="life_style" value="annual" />
        <character name="architecture" value="taprooted" />
      </structure>
    </statement>
    <statement id="589.txt-2">
      <text>Stems usually 1, erect, simple proximally, branched distally, glabrous.</text>
      <structure id="o12229" name="stem">
        <character name="count" value="1" modifier="usually" />
        <character name="orientation" value="erect" />
        <character name="architecture" value="simple" modifier="proximally" />
        <character name="architecture_or_shape" value="branched" modifier="distally" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="589.txt-3">
      <text>Leaves cauline (opposite proximally);</text>
    </statement>
    <statement id="589.txt-4">
      <text>± sessile;</text>
      <structure id="o12230" name="leaf">
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="sessile" modifier="±" />
      </structure>
    </statement>
    <statement id="589.txt-5">
      <text>blades linear to filiform, margins entire.</text>
      <structure id="o12231" name="blade">
        <character char_type="range_value" name="shape" from="linear" to="filiform" />
        <character name="shape" value="linear" />
        <character name="shape" value="filiform" />
