    </statement>
    <statement id="589.txt-6">
      <text>Heads borne singly.</text>
      <structure id="o12233" name="head">
        <character name="arrangement" value="singly" />
      </structure>
    </statement>
    <statement id="589.txt-7">
      <text>Peduncles not inflated distally, usually bracteate.</text>
