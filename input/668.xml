        <character name="pubescence" value="glabrescent-scabrous" />
        <character name="pubescence" value="gray-pubescent" />
      </structure>
    </statement>
    <statement id="668.txt-4">
      <text>Cauline leaves linear, 3–11(–13) mm, usually not flagged (apices acute to acuminate), rarely distal flagged.</text>
      <structure id="o13981" name="leaf" constraint="cauline">
        <character name="arrangement_or_shape" value="linear" />
        <character char_type="range_value" name="atypical_size" from="11" to="13" from_unit="mm" to_unit="mm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="11" to_unit="mm" />
        <character name="orientation" value="flagged" modifier="usually not" />
        <character name="insertion_or_position" value="distal" modifier="rarely" />
        <character name="orientation" value="flagged" />
      </structure>
    </statement>
    <statement id="668.txt-5">
      <text>Heads 4–6 in corymbiform arrays.</text>
      <structure id="o13982" name="head">
        <character char_type="range_value" name="count" from="4" to="6" constraint="in arrays" constraintid="o13983" />
