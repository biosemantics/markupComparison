    </statement>
    <statement id="668.txt-1">
      <text>Plants (1–)3–12 cm (stems usually stipitate-glandular).</text>
      <structure id="o13976" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="1" to="3" from_unit="cm" to_unit="cm" to_inclusive="false" />
        <character char_type="range_value" name="size" from="3" from_unit="cm" to="12" to_unit="cm" />
        <character name="life_style" value="plant" />
