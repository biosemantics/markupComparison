      <structure id="o1054" name="apex">
        <character char_type="range_value" name="orientation" from="loosely ascending" to="spreading" />
        <character name="orientation" value="ascending" modifier="loosely" />
        <character name="orientation" value="spreading" modifier="loosely" />
      </structure>
      <structure id="o1055" name="body">
        <character char_type="range_value" name="shape" from="entire" to="spiny-ciliate" />
        <character name="shape" value="entire" />
        <character name="shape" value="spiny-ciliate" />
        <character name="shape" value="terminal appendages" />
        <character name="texture" value="scarious" modifier="±" />
        <character name="shape" value="fringed" modifier="pectinately" />
      </structure>
      <structure id="o1056" name="appendage" constraint="terminal">
