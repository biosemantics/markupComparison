    </statement>
    <statement id="139.txt-16">
      <text>style tips 2–4 mm.</text>
      <structure id="o1064" name="tip" constraint="style">
        <character char_type="range_value" name="size" from="2" from_unit="mm" to="4" to_unit="mm" />
