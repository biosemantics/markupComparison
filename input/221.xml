      <structure id="o3564" name="corolla" constraint="sterile">
        <character name="size" value="slender" />
      </structure>
    </statement>
    <statement id="221.txt-15">
      <text>Cypselae white or brown-streaked, 2.5–3.4 mm, glabrous;</text>
      <structure id="o3565" name="cypsela">
        <character name="coloration" value="white" />
        <character name="coloration" value="streaked" modifier="brown" />
        <character char_type="range_value" name="size" from="2.5" from_unit="mm" to="3.4" to_unit="mm" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="221.txt-16">
      <text>pappi 0. 2 n = 20.</text>
