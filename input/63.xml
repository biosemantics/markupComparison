  <variety_name>Cirsium horridulum Michaux var. horridulum</variety_name>
  <common_name>Horrid thistle</common_name>
  <synonym_of_variety_name>Carduus spinosissimus Walter 1788, not Cirsium spinosissimum (Linnaeus) Scopoli 1772; C. horridulum var. elliottii Torrey &amp; A. Gray</synonym_of_variety_name>
  <description>
    <statement id="63.txt-0">
      <text>Plants 15–180 cm.</text>
      <structure id="o13180" name="whole_organism">
        <character char_type="range_value" name="size" from="15" from_unit="cm" to="180" to_unit="cm" />
        <character name="life_style" value="plant" />
      </structure>
    </statement>
    <statement id="63.txt-1">
      <text>Stems densely tomentose.</text>
      <structure id="o13181" name="stem">
        <character name="pubescence" value="tomentose" modifier="densely" />
      </structure>
    </statement>
    <statement id="63.txt-2">
      <text>Leaves:</text>
      <structure id="o13182" name="leaf" />
    </statement>
    <statement id="63.txt-3">
      <text>blades oblanceolate or oblong-elliptic, 10–30 cm, shallowly to deeply pinnatifid, main spines mostly 5–10 mm, abaxial faces loosely tomentose.</text>
      <structure id="o13183" name="blade">
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="oblong-elliptic" />
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="30" to_unit="cm" />
        <character name="shape" value="pinnatifid" modifier="shallowly deeply" />
      </structure>
      <structure id="o13184" name="spine" constraint="main">
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="10" to_unit="mm" modifier="mostly" />
      </structure>
      <structure id="o13185" name="face" constraint="abaxial">
        <character name="pubescence" value="tomentose" modifier="loosely" />
      </structure>
    </statement>
    <statement id="63.txt-4">
      <text>Heads 1–10.</text>
      <structure id="o13186" name="head">
        <character char_type="range_value" name="count" from="1" to="10" />
      </structure>
    </statement>
    <statement id="63.txt-5">
      <text>Involucres 4–5 × 5–7 cm, ± densely tomentose.</text>
      <structure id="o13187" name="involucre">
        <character char_type="range_value" name="length" from="4" from_unit="cm" to="5" to_unit="cm" />
        <character char_type="range_value" name="width" from="5" from_unit="cm" to="7" to_unit="cm" />
        <character name="pubescence" value="tomentose" modifier="± densely" />
      </structure>
    </statement>
    <statement id="63.txt-6">
      <text>Phyllaries :</text>
      <structure id="o13188" name="phyllary" />
    </statement>
    <statement id="63.txt-7">
      <text>outer and middle bodies scabridulous or minutely spinulose, marginal spinules usually 1 mm or shorter.</text>
      <structure id="o13189" name="body" constraint="outer and middle">
        <character name="relief" value="scabridulous" />
        <character name="shape_or_architecture" value="spinulose" modifier="minutely" />
      </structure>
      <structure id="o13190" name="spinule" constraint="marginal">
        <character name="size" value="1" unit="mm" modifier="usually" />
        <character name="size" value="shorter" />
      </structure>
    </statement>
    <statement id="63.txt-8">
      <text>Corollas yellow or crimson to red-purple.</text>
      <structure id="o13191" name="corolla">
        <character char_type="range_value" name="coloration" from="crimson" to="red-purple" />
        <character name="coloration" value="yellow" />
        <character name="coloration" value="crimson" />
        <character name="coloration" value="purple" modifier="red" />
      </structure>
    </statement>
    <statement id="63.txt-9">
      <text>2 n = 32, 34.</text>
      <structure id="o13192" name="chromosome">
        <character name="count" value="32" />
        <character name="count" value="34" />
      </structure>
    </statement>
