        <character name="architecture_or_shape" value="branched" />
      </structure>
    </statement>
    <statement id="818.txt-2">
      <text>Leaves mainly cauline;</text>
    </statement>
    <statement id="818.txt-3">
      <text>petiolate;</text>
      <structure id="o17232" name="leaf">
        <character name="insertion_or_position" value="cauline" modifier="mainly" />
        <character name="architecture" value="petiolate" />
      </structure>
    </statement>
    <statement id="818.txt-5">
      <text>Heads 5–20(–30) in corymbiform arrays.</text>
      <structure id="o17233" name="head">
