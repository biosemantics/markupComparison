<treatment>
  <number>119c.</number>
  <subgenus_name>ARTEMISIA Linnaeus subg. ABSINTHIUM</subgenus_name>
  <authority>(Miller) Lessing</authority>
  <place_of_publication>Syn. Gen. Compos., 264. 1832</place_of_publication>
  <synonym_of_tribe_genus>Absinthium Miller, Gard. Dict. Abr. ed. 4, vol. 1. 1754; Artemisia subsect. Absinthium (Miller) Darijma</synonym_of_tribe_genus>
  <description>
    <statement id="884.txt-0">
      <text>Perennials;</text>
    </statement>
    <statement id="884.txt-1">
      <text>fibrous rooted, caudices woody, rhizomes absent.</text>
      <structure id="o18359" name="whole_organism">
        <character name="life_style" value="perennial" />
        <character name="texture" value="fibrous" />
        <character name="architecture" value="rooted" />
      </structure>
      <structure id="o18360" name="caudex">
        <character name="texture" value="woody" />
      </structure>
      <structure id="o18361" name="rhizome">
        <character name="presence" value="absent" />
      </structure>
    </statement>
    <statement id="884.txt-2">
      <text>Stems not wandlike.</text>
      <structure id="o18362" name="stem">
        <character name="shape" value="wandlike" modifier="not" />
      </structure>
    </statement>
    <statement id="884.txt-3">
      <text>Leaves deciduous or persistent, basal and/or cauline (petiolate or sessile, not in fascicles).</text>
      <structure id="o18363" name="leaf">
        <character name="duration" value="deciduous" />
        <character name="duration" value="persistent" />
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
      </structure>
    </statement>
    <statement id="884.txt-4">
      <text>Heads disciform.</text>
      <structure id="o18364" name="head">
        <character name="shape_or_architecture" value="disciform" />
      </structure>
    </statement>
    <statement id="884.txt-5">
      <text>Receptacles epaleate, villous (hairs relatively long).</text>
      <structure id="o18365" name="receptacle">
        <character name="architecture" value="epaleate" />
        <character name="pubescence" value="villous" />
      </structure>
    </statement>
    <statement id="884.txt-6">
      <text>Florets:</text>
      <structure id="o18366" name="floret" />
    </statement>
    <statement id="884.txt-7">
      <text>peripheral 6–27 pistillate and fertile;</text>
      <structure id="o18367" name="floret" constraint="peripheral">
        <character char_type="range_value" name="count" from="6" to="27" />
        <character name="architecture" value="pistillate" />
        <character name="reproduction" value="fertile" />
      </structure>
    </statement>
    <statement id="884.txt-8">
      <text>central 15–100 bisexual and fertile;</text>
      <structure id="o18368" name="floret" constraint="central">
        <character char_type="range_value" name="count" from="15" to="100" />
        <character name="reproduction" value="bisexual" />
        <character name="reproduction" value="fertile" />
      </structure>
    </statement>
    <statement id="884.txt-9">
      <text>corollas (pale yellow) funnelform.</text>
      <structure id="o18369" name="corolla">
        <character name="shape" value="funnelform" />
      </structure>
    </statement>
  </description>
  <number_of_infrataxa>Species ca. 40 (5 in the flora):</number_of_infrataxa>
  <general_distribution>temperate regions</general_distribution>
  <general_distribution>North America</general_distribution>
  <general_distribution>South America</general_distribution>
  <general_distribution>Eurasia.</general_distribution>
