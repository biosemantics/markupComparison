        <character name="pubescence" value="glabrate" />
      </structure>
    </statement>
    <statement id="718.txt-4">
      <text>Heads initially usually in dense, continuous spiciform arrays 2–20 cm × 10–14 mm (pressed), later branched, interrupted.</text>
