        <character char_type="range_value" name="length" from="20" from_unit="mm" to="80" to_unit="mm" />
        <character char_type="range_value" name="width" from="6" from_unit="mm" to="20" to_unit="mm" upper_restricted="false" />
        <character name="size" value="widths" modifier="2-8+ times" />
