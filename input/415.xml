        <character name="pubescence" value="piloso-hirsute" modifier="proximally" />
        <character name="pubescence" value="stellate-pubescent" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
        <character name="pubescence" value="piloso-hirsute" modifier="distally" />
        <character name="pubescence" value="stellate-pubescent" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="415.txt-2">
      <text>Leaves:</text>
      <structure id="o8167" name="leaf" />
    </statement>
    <statement id="415.txt-3">
      <text>basal 5–13+, cauline 0(–2+);</text>
