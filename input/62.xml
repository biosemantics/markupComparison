      <structure id="o12974" name="lobe">
        <character char_type="range_value" name="size" from="7" from_unit="mm" to="10" to_unit="mm" />
      </structure>
    </statement>
    <statement id="62.txt-16">
      <text>style tips 3–5 mm.</text>
      <structure id="o12975" name="tip" constraint="style">
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="5" to_unit="mm" />
      </structure>
    </statement>
