  <common_name>Roman wormwood, green-ginger, armoise de la mer Noire</common_name>
  <description>
    <statement id="922.txt-0">
      <text>Perennials , 40–100 cm, somewhat aromatic;</text>
      <structure id="o18961" name="whole_organism">
        <character char_type="range_value" name="size" from="40" from_unit="cm" to="100" to_unit="cm" />
        <character name="odor" value="aromatic" modifier="somewhat" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="922.txt-1">
      <text>rhizomes creeping, woody.</text>
      <structure id="o18962" name="rhizome">
        <character name="habit" value="creeping" />
        <character name="texture" value="woody" />
      </structure>
    </statement>
    <statement id="922.txt-2">
      <text>Stems relatively numerous, erect, brown, mostly simple (brittle, bases woody) canescent or glabrate.</text>
      <structure id="o18963" name="stem">
        <character name="count" value="numerous" modifier="relatively" />
        <character name="orientation" value="erect" />
        <character name="coloration" value="brown" />
        <character name="pubescence" value="glabrate" modifier="mostly" />
      </structure>
    </statement>
    <statement id="922.txt-3">
      <text>Leaves cauline, grayish green;</text>
    </statement>
    <statement id="922.txt-4">
      <text>sessile (proximalmost short-petiolate);</text>
      <structure id="o18964" name="leaf">
        <character name="insertion_or_position" value="cauline" />
        <character name="coloration" value="green" modifier="grayish" />
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="922.txt-5">
      <text>blades triangular to ovate, 1–5 × 1–3 cm, 2–3-pinnatifid (lobes 0.5–1 mm wide, acute), faces pubescent (abaxial) or hairy to glabrate (adaxial).</text>
      <structure id="o18965" name="blade">
        <character char_type="range_value" name="shape" from="triangular" to="ovate" />
        <character name="shape" value="triangular" />
        <character name="shape" value="ovate" />
        <character char_type="range_value" name="length" from="1" from_unit="cm" to="5" to_unit="cm" />
        <character char_type="range_value" name="width" from="1" from_unit="cm" to="3" to_unit="cm" />
        <character name="shape" value="2-3-pinnatifid" />
      </structure>
      <structure id="o18966" name="face">
        <character char_type="range_value" name="pubescence" from="hairy" to="glabrate" />
        <character name="pubescence" value="pubescent" />
        <character name="pubescence" value="hairy" />
        <character name="pubescence" value="glabrate" />
      </structure>
    </statement>
    <statement id="922.txt-6">
      <text>Heads (nodding) in paniculiform arrays 10–22 × 2–4 cm.</text>
      <structure id="o18967" name="head" />
      <structure id="o18968" name="array">
        <character name="architecture" value="paniculiform" />
        <character char_type="range_value" name="length" from="10" from_unit="cm" to="22" to_unit="cm" />
        <character char_type="range_value" name="width" from="2" from_unit="cm" to="4" to_unit="cm" />
      </structure>
      <relation id="r2008" name="in" from="o18967" to="o18968" negation="false" />
    </statement>
    <statement id="922.txt-7">
      <text>Involucres spheric, 1.5–2(–3) mm.</text>
      <structure id="o18969" name="involucre">
        <character name="shape" value="spheric" />
        <character char_type="range_value" name="atypical_size" from="2" to="3" from_unit="mm" to_unit="mm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="1.5" from_unit="mm" to="2" to_unit="mm" />
      </structure>
    </statement>
    <statement id="922.txt-8">
      <text>Phyllaries (subequal) linear, hairy.</text>
      <structure id="o18970" name="phyllary">
        <character name="arrangement_or_shape" value="linear" />
        <character name="pubescence" value="hairy" />
      </structure>
    </statement>
    <statement id="922.txt-9">
      <text>Florets:</text>
      <structure id="o18971" name="floret" />
    </statement>
    <statement id="922.txt-10">
      <text>pistillate 10–12;</text>
      <structure id="o18972" name="floret" constraint="pistillate">
        <character char_type="range_value" name="count" from="10" to="12" />
      </structure>
    </statement>
    <statement id="922.txt-11">
      <text>bisexual 40–45;</text>
      <structure id="o18973" name="floret" constraint="bisexual">
        <character char_type="range_value" name="count" from="40" to="45" />
      </structure>
    </statement>
    <statement id="922.txt-12">
      <text>corollas pale yellow, 0.2–0.3 mm, sometimes gland-dotted (stigma lobes relatively short, not emerging from tubes, short-ciliate).</text>
      <structure id="o18974" name="corolla">
        <character name="coloration" value="yellow" modifier="pale" />
        <character char_type="range_value" name="size" from="0.2" from_unit="mm" to="0.3" to_unit="mm" />
        <character name="coloration_or_relief" value="gland-dotted" modifier="sometimes" />
      </structure>
    </statement>
    <statement id="922.txt-13">
      <text>Cypselae ellipsoid (angled), 0.1–0.2 mm, glabrous.</text>
      <structure id="o18975" name="cypsela">
        <character name="shape" value="ellipsoid" />
        <character char_type="range_value" name="size" from="0.1" from_unit="mm" to="0.2" to_unit="mm" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
