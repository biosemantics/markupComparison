    </statement>
    <statement id="488.txt-2">
      <text>Cauline leaves:</text>
      <structure id="o9753" name="leaf" constraint="cauline" />
    </statement>
    <statement id="488.txt-3">
      <text>proximal obovate to oblanceolate, pinnately lobed (lobes 2–6 pairs), not fleshy, ultimate margins entire or dentate, faces glabrous;</text>
      <structure id="o9754" name="leaf" constraint="proximal cauline">
        <character name="shape" value="obovate" />
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="lobed" modifier="pinnately" />
        <character name="texture" value="fleshy" modifier="not" />
      </structure>
      <structure id="o9755" name="margin" constraint="ultimate">
        <character name="shape" value="entire" />
        <character name="shape" value="dentate" />
      </structure>
      <structure id="o9756" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="488.txt-4">
      <text>distal not notably reduced (narrowly ovate with 5–10 narrow teeth or lobes).</text>
      <structure id="o9757" name="leaf" constraint="distal cauline">
        <character name="size" value="reduced" modifier="not notably" />
      </structure>
    </statement>
