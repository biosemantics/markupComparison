    <statement id="488.txt-1">
      <text>Stems 1–3+, ascending to erect (stout), branched from bases and distally, ± leafy, glabrous.</text>
      <structure id="o9751" name="stem">
        <character char_type="range_value" name="count" from="1" to="3" upper_restricted="false" />
        <character char_type="range_value" name="orientation" from="ascending" to="erect" />
