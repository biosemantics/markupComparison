        <character name="shape" value="entire" />
        <character name="shape" value="dentate" modifier="remotely" />
        <character name="shape" value="lobed" modifier="pinnately" />
      </structure>
      <structure id="o10758" name="apex">
        <character name="shape" value="acuminate" />
      </structure>
      <structure id="o10759" name="face">
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="scurfy-puberulent" modifier="lightly" />
      </structure>
    </statement>
    <statement id="523.txt-6">
      <text>Peduncles erect or ascending (4–35 cm), ebracteate or leafy.</text>
      <structure id="o10760" name="peduncle">
        <character name="orientation" value="erect" />
        <character name="orientation" value="ascending" />
        <character name="architecture" value="ebracteate" />
        <character name="architecture" value="leafy" />
      </structure>
    </statement>
    <statement id="523.txt-7">
      <text>Involucres broadly to narrowly ovoid in fruit, 8–22 mm.</text>
      <structure id="o10761" name="involucre">
        <character name="shape" value="ovoid" modifier="broadly narrowly" constraint="in fruit" constraintid="o10762" />
        <character char_type="range_value" name="size" from="8" from_unit="mm" to="22" to_unit="mm" />
      </structure>
      <structure id="o10762" name="fruit" />
    </statement>
    <statement id="523.txt-8">
      <text>Phyllaries:</text>
      <structure id="o10763" name="phyllary" />
    </statement>
    <statement id="523.txt-9">
      <text>apices erect, abaxial faces glabrous or scurfy-puberulent;</text>
      <structure id="o10764" name="apex">
        <character name="orientation" value="erect" />
      </structure>
      <structure id="o10765" name="face" constraint="abaxial">
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="scurfy-puberulent" />
      </structure>
    </statement>
    <statement id="523.txt-10">
      <text>outer lanceolate to triangular or linear, apices acute or acuminate;</text>
      <structure id="o10766" name="phyllary" constraint="outer" />
      <structure id="o10767" name="apex">
        <character name="shape" value="acute" />
        <character name="shape" value="acuminate" />
      </structure>
    </statement>
    <statement id="523.txt-11">
