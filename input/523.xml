      <structure id="o10768" name="phyllary" constraint="inner">
        <character name="shape" value="lanceolate" />
      </structure>
      <structure id="o10769" name="apex">
        <character name="shape" value="acuminate" />
      </structure>
      <structure id="o10770" name="face">
        <character name="pubescence" value="black-villous" modifier="usually lightly" />
      </structure>
    </statement>
