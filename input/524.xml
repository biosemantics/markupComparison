  <description>
    <statement id="524.txt-0">
      <text>Perennials, 15–120 cm;</text>
    </statement>
    <statement id="524.txt-1">
      <text>taprooted.</text>
      <structure id="o10779" name="whole_organism">
        <character char_type="range_value" name="size" from="15" from_unit="cm" to="120" to_unit="cm" />
        <character name="life_style" value="perennial" />
        <character name="architecture" value="taprooted" />
      </structure>
    </statement>
    <statement id="524.txt-2">
      <text>Stems branched and leafy distally, or simple and leafy only proximally (subsp. detlingii and plants of extreme environments).</text>
      <structure id="o10780" name="stem">
        <character name="architecture_or_shape" value="branched" />
        <character name="architecture" value="leafy" modifier="distally" />
        <character name="architecture" value="simple" />
        <character name="architecture" value="leafy" modifier="only proximally" />
      </structure>
    </statement>
    <statement id="524.txt-3">
      <text>Leaves basal and cauline;</text>
    </statement>
    <statement id="524.txt-4">
      <text>petiolate (distal often sessile, clasping);</text>
      <structure id="o10781" name="leaf">
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="petiolate" />
      </structure>
    </statement>
    <statement id="524.txt-5">
      <text>blades linear to broadly lanceolate, 10–50 cm, margins entire, dentate, lacerate, or pinnatifid, apices obtuse to acuminate, faces glabrous or scurfy-puberulent.</text>
      <structure id="o10782" name="blade">
        <character char_type="range_value" name="shape" from="linear" to="broadly lanceolate" />
        <character name="shape" value="linear" />
        <character name="shape" value="lanceolate" modifier="broadly" />
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="50" to_unit="cm" />
      </structure>
      <structure id="o10783" name="margin">
