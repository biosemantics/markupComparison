        <character char_type="range_value" name="size" from="6" from_unit="cm" to="80" to_unit="cm" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="821.txt-1">
      <text>Stems 1(–4+, clustered), usually erect, branched mostly distally, glabrous or sparsely to densely lanate (hairs usually basifixed).</text>
      <structure id="o17278" name="stem">
        <character name="count" value="1" />
        <character name="orientation" value="erect" modifier="usually" />
        <character name="architecture_or_shape" value="branched" modifier="mostly distally" />
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="lanate" modifier="sparsely densely" />
      </structure>
    </statement>
    <statement id="821.txt-2">
      <text>Leaves basal (often withering before flowering) and cauline;</text>
    </statement>
    <statement id="821.txt-3">
      <text>alternate;</text>
    </statement>
    <statement id="821.txt-4">
