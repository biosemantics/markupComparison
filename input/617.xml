        <character char_type="range_value" name="length" from="15" from_unit="mm" to="50" to_unit="mm" />
        <character char_type="range_value" name="atypical_width" from="15" to="25" from_unit="mm" to_unit="mm" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="width" from="3" from_unit="mm" to="15" to_unit="mm" />
        <character name="shape" value="dentate" modifier="usually" />
        <character name="shape" value="pinnatifid" />
        <character name="shape" value="entire" modifier="sometimes" />
      </structure>
    </statement>
    <statement id="617.txt-2">
