        <character name="shape" value="deltate" />
      </structure>
    </statement>
    <statement id="973.txt-14">
      <text>Cypselae ± columnar, ribs 7–12, faces probably glabrous (pericarps without myxogenic cells or resin sacs);</text>
      <structure id="o20020" name="cypsela">
        <character name="shape" value="columnar" modifier="±" />
      </structure>
