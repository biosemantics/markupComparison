  <description>
    <statement id="954.txt-0">
      <text>Leaves 1–3(–5) cm, ultimate lobes narrowly oblong to spatulate or linear, ultimate margins entire or serrate (teeth apiculate).</text>
      <structure id="o19692" name="leaf">
        <character char_type="range_value" name="atypical_size" from="3" to="5" from_unit="cm" to_unit="cm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="1" from_unit="cm" to="3" to_unit="cm" />
      </structure>
      <structure id="o19693" name="lobe" constraint="ultimate">
        <character char_type="range_value" name="shape" from="narrowly oblong" to="spatulate or linear" />
        <character name="shape" value="oblong" modifier="narrowly" />
        <character name="shape" value="spatulate" modifier="narrowly" />
        <character name="shape" value="linear" modifier="narrowly" />
      </structure>
      <structure id="o19694" name="margin" constraint="ultimate">
        <character name="shape" value="entire" />
        <character name="shape" value="serrate" />
      </structure>
    </statement>
    <statement id="954.txt-1">
      <text>Phyllaries:</text>
      <structure id="o19695" name="phyllary" />
    </statement>
    <statement id="954.txt-2">
      <text>abaxial faces sericeous to arachnose, margins often ciliolate.</text>
      <structure id="o19696" name="face" constraint="abaxial">
        <character char_type="range_value" name="pubescence" from="sericeous" to="arachnose" />
        <character name="pubescence" value="sericeous" />
        <character name="pubescence" value="arachnose" />
      </structure>
      <structure id="o19697" name="margin">
        <character name="pubescence" value="ciliolate" modifier="often" />
      </structure>
    </statement>
    <statement id="954.txt-3">
      <text>Paleae 4–5 mm (including spinose tips).</text>
      <structure id="o19698" name="palea">
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="954.txt-4">
      <text>Ray laminae yellow, 6–12+ mm.</text>
      <structure id="o19699" name="lamina" constraint="ray">
        <character name="coloration" value="yellow" />
        <character char_type="range_value" name="size" from="6" from_unit="mm" to="12" to_unit="mm" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="954.txt-5">
      <text>Disc corollas 3.5–4 mm.</text>
      <structure id="o19700" name="corolla" constraint="disc">
        <character char_type="range_value" name="size" from="3.5" from_unit="mm" to="4" to_unit="mm" />
      </structure>
    </statement>
    <statement id="954.txt-6">
      <text>Cypselae 1.8–2.2 mm;</text>
      <structure id="o19701" name="cypsela">
        <character char_type="range_value" name="size" from="1.8" from_unit="mm" to="2.2" to_unit="mm" />
      </structure>
    </statement>
    <statement id="954.txt-7">
      <text>pappi usually 2–2.5 mm.</text>
      <structure id="o19702" name="pappus">
        <character char_type="range_value" name="size" from="2" from_unit="mm" to="2.5" to_unit="mm" modifier="usually" />
