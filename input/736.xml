        <character char_type="range_value" name="size" from="1.9" from_unit="mm" to="3" to_unit="mm" />
      </structure>
      <structure id="o15438" name="bristle">
        <character char_type="range_value" name="count" from="17" to="23" upper_restricted="false" />
