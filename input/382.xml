        <character name="shape" value="rhombic" modifier="±" />
        <character name="shape" value="lanceolate" modifier="±" />
        <character name="arrangement_or_shape" value="linear" modifier="±" />
      </structure>
      <structure id="o7297" name="terminal">
        <character name="shape" value="entire" />
        <character name="shape" value="dentate" />
      </structure>
      <structure id="o7298" name="lateral">
        <character name="comparison" value="equaling" modifier="±" />
      </structure>
    </statement>
    <statement id="382.txt-4">
      <text>Peduncles usually setose- to stipitate-glandular, often tomentose as well, sometimes glabrous.</text>
      <structure id="o7299" name="peduncle">
        <character name="architecture_or_exudation_or_pubescence" value="setose-to-stipitate-glandular" modifier="usually" />
