        <character name="life_style" value="annual" />
      </structure>
    </statement>
    <statement id="476.txt-1">
      <text>Stems usually 1, erect or ± prostrate, usually ± branched proximally (often forming mats, usually leafy throughout), glabrous.</text>
      <structure id="o9501" name="stem">
        <character name="count" value="1" modifier="usually" />
        <character name="orientation" value="erect" />
        <character name="orientation" value="prostrate" modifier="±" />
        <character name="architecture_or_shape" value="branched" modifier="usually ± ; proximally" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="476.txt-2">
      <text>Cauline leaves:</text>
      <structure id="o9502" name="leaf" constraint="cauline" />
    </statement>
    <statement id="476.txt-3">
      <text>proximal obovate to spatulate, usually pinnately lobed (lobes 1–3+ pairs, nearly equal, apices obtuse), usually fleshy, ultimate margins entire, faces glabrous;</text>
      <structure id="o9503" name="leaf" constraint="proximal cauline">
        <character name="shape" value="obovate" />
        <character name="shape" value="spatulate" />
        <character name="shape" value="lobed" modifier="usually pinnately" />
        <character name="texture" value="fleshy" modifier="usually" />
      </structure>
      <structure id="o9504" name="margin" constraint="ultimate">
        <character name="shape" value="entire" />
      </structure>
      <structure id="o9505" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="476.txt-4">
      <text>distal not reduced (similar to others).</text>
      <structure id="o9506" name="leaf" constraint="distal cauline">
        <character name="size" value="reduced" modifier="not" />
      </structure>
    </statement>
    <statement id="476.txt-5">
      <text>Calyculi of 8–13+, lance-deltate to lanceolate bractlets (sometimes intergrading with phyllaries), hyaline margins 0.05–0.2 mm wide.</text>
      <structure id="o9507" name="calyculus" />
      <structure id="o9508" name="bractlet">
        <character char_type="range_value" name="count" from="8" to="13" upper_restricted="false" />
