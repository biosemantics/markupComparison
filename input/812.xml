      </structure>
      <relation id="r1841" name="in" from="o17112" to="o17113" negation="false" />
    </statement>
    <statement id="812.txt-6">
      <text>Involucres campanulate to turbinate-campanulate or turbinate, 4–6 × 5–9 mm (bases obtuse to barely acute).</text>
      <structure id="o17114" name="involucre">
        <character char_type="range_value" name="shape" from="campanulate" to="turbinate-campanulate or turbinate" />
