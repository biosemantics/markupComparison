        <character name="architecture" value="branched" modifier="much proximally" />
        <character name="pubescence" value="glabrous" modifier="usually" />
        <character name="pubescence" value="tomentulose" modifier="rarely" />
      </structure>
    </statement>
    <statement id="591.txt-3">
      <text>Leaves basal (sometimes in rosettes) and cauline;</text>
    </statement>
    <statement id="591.txt-4">
      <text>sessile;</text>
