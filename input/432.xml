        <character name="shape" value="dentate" />
        <character name="shape" value="lobed" modifier="pinnately" />
      </structure>
    </statement>
    <statement id="432.txt-6">
      <text>Heads borne singly or in loose, cymiform, paniculiform , or corymbiform arrays.</text>
