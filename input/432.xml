        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="432.txt-5">
      <text>blades oblanceolate to oblong or elliptic, margins entire or dentate to pinnately lobed (faces glabrous or hirsute).</text>
      <structure id="o8568" name="blade">
        <character char_type="range_value" name="shape" from="oblanceolate" to="oblong or elliptic" />
