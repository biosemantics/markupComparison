        <character char_type="range_value" name="count" from="1" to="5" upper_restricted="false" />
        <character name="orientation" value="erect" />
        <character name="architecture_or_shape" value="branched" constraint="near base bases" constraintid="o11743" />
        <character char_type="range_value" name="pubescence" from="glandular-puberulent" to="glabrescent" />
        <character name="pubescence" value="glandular-puberulent" />
        <character name="pubescence" value="glabrescent" />
      </structure>
      <structure id="o11743" name="base" constraint="base" />
    </statement>
    <statement id="570.txt-3">
      <text>Leaves basal or proximally cauline;</text>
    </statement>
    <statement id="570.txt-4">
      <text>sessile or petiolate;</text>
      <structure id="o11744" name="leaf">
