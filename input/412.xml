        <character name="architecture" value="corymbiform" />
      </structure>
    </statement>
    <statement id="412.txt-6">
      <text>Peduncles densely stellate-pubescent and stipitate-glandular.</text>
      <structure id="o8102" name="peduncle">
        <character name="pubescence" value="stellate-pubescent" modifier="densely" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
