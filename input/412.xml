      </structure>
    </statement>
    <statement id="412.txt-9">
      <text>Involucres campanulate to obconic, 8–9 mm.</text>
      <structure id="o8105" name="involucre">
        <character char_type="range_value" name="shape" from="campanulate" to="obconic" />
