    <statement id="817.txt-1">
      <text>Stems 1, erect, simple or branched (strigose, glabrate).</text>
      <structure id="o17216" name="stem">
        <character name="count" value="1" />
        <character name="orientation" value="erect" />
        <character name="architecture" value="simple" />
        <character name="architecture" value="branched" />
      </structure>
    </statement>
    <statement id="817.txt-2">
      <text>Leaves basal and cauline;</text>
    </statement>
    <statement id="817.txt-3">
      <text>petiolate (proximal) or sessile (distal);</text>
      <structure id="o17217" name="leaf">
