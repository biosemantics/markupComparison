        <character char_type="range_value" name="width" from="2" from_unit="cm" to="8" to_unit="cm" />
        <character name="shape" value="lobed" modifier="usually not pinnately" />
      </structure>
      <structure id="o17219" name="margin">
        <character name="shape" value="crenate" modifier="±" />
      </structure>
      <structure id="o17220" name="face">
