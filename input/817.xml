        <character name="pubescence" value="glabrescent" />
        <character name="coloration_or_relief" value="gland-dotted" modifier="±" />
      </structure>
    </statement>
    <statement id="817.txt-5">
      <text>Heads (3–)10–60+ in corymbiform arrays.</text>
      <structure id="o17221" name="head">
        <character char_type="range_value" name="atypical_count" from="3" to="10" to_inclusive="false" />
