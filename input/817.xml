      </structure>
    </statement>
    <statement id="817.txt-6">
      <text>Involucres (3–)5–8(–10) mm diam. (phyllaries 40–60+ in 3–4+ series, tips usually ± dilated).</text>
      <structure id="o17223" name="involucre">
        <character char_type="range_value" name="atypical_size" from="3" to="5" from_unit="mm" to_unit="mm" to_inclusive="false" />
