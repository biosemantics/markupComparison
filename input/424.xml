      <relation id="r993" name="consist_of" from="o8420" to="o8421" negation="false" />
      <structure id="o8422" name="series">
        <character char_type="range_value" name="count" from="1" to="2" />
      </structure>
      <relation id="r994" name="in" from="o8421" to="o8422" negation="false" />
