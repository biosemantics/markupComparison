        <character name="coloration" value="brown" modifier="reddish" />
        <character name="shape" value="fusiform" />
        <character name="shape" value="cylindric" />
        <character name="shape" value="curved" />
        <character name="size" value="narrowed" modifier="distally" />
        <character name="shape" value="beaked" modifier="not" />
        <character name="shape" value="beaked" modifier="not" />
      </structure>
      <structure id="o8418" name="rib">
        <character char_type="range_value" name="count" from="10" to="14" />
      </structure>
      <structure id="o8419" name="face">
        <character name="relief" value="muricate" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="424.txt-15">
      <text>pappi of ± distinct, yellowish white, tan, or pale brown bristles in 1–2 series (all uniformly plumose or outer reduced; pappi of outer cypselae sometimes reduced to crowns of bristlelike scales).</text>
      <structure id="o8420" name="pappus" />
