      <structure id="o11997" name="phyllary">
        <character char_type="range_value" name="count" from="8" to="18" />
        <character name="orientation" value="reflexed" constraint="in fruit" constraintid="o11998" />
        <character name="shape" value="lanceolate" />
      </structure>
      <structure id="o11998" name="fruit" />
      <structure id="o11999" name="midvein">
        <character name="manifestation" value="obscure" />
      </structure>
      <structure id="o12000" name="apex">
        <character name="shape" value="acute" />
      </structure>
      <structure id="o12001" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="579.txt-11">
      <text>Florets 25–60;</text>
      <structure id="o12002" name="floret">
