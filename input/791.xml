        <character name="relief" value="smooth" />
        <character name="relief" value="alveolate" />
        <character name="architecture" value="epaleate" />
      </structure>
    </statement>
    <statement id="791.txt-8">
      <text>Ray florets (6–)10–12(–16), pistillate, fertile;</text>
      <structure id="o16692" name="floret" constraint="ray">
