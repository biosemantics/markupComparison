        <character char_type="range_value" name="size" from="20" from_unit="cm" to="130" to_unit="cm" modifier="mostly" />
        <character name="life_style" value="annual" />
      </structure>
    </statement>
    <statement id="791.txt-1">
      <text>Leaves mostly cauline (at flowering), alternate;</text>
    </statement>
    <statement id="791.txt-2">
      <text>sessile;</text>
      <structure id="o16684" name="leaf">
        <character name="insertion_or_position" value="cauline" modifier="mostly" />
        <character name="arrangement" value="alternate" />
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="791.txt-3">
      <text>blade margins entire or dentate [serrate].</text>
      <structure id="o16685" name="margin" constraint="blade">
        <character name="shape" value="entire" />
        <character name="shape" value="dentate" />
      </structure>
    </statement>
    <statement id="791.txt-4">
      <text>Heads radiate, in racemiform or paniculiform arrays.</text>
      <structure id="o16686" name="head">
        <character name="architecture_or_arrangement" value="radiate" />
      </structure>
      <structure id="o16687" name="array">
