      </structure>
    </statement>
    <statement id="875.txt-9">
      <text>corollas 2.5–3.5, glabrous.</text>
      <structure id="o18268" name="corolla">
        <character char_type="range_value" name="size" from="2.5" to="3.5" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="875.txt-10">
      <text>Cypselae 1–1.5 mm, glabrous or resinous.</text>
      <structure id="o18269" name="cypsela">
        <character char_type="range_value" name="size" from="1" from_unit="mm" to="1.5" to_unit="mm" />
        <character name="pubescence" value="glabrous" />
        <character name="coating_or_texture" value="resinous" />
