  <description>
    <statement id="875.txt-0">
      <text>Shrubs, 30–80 cm (widely branched, gray-tomentose), aromatic;</text>
    </statement>
    <statement id="875.txt-1">
      <text>root-sprouting.</text>
      <structure id="o18258" name="whole_organism">
        <character char_type="range_value" name="size" from="30" from_unit="cm" to="80" to_unit="cm" />
        <character name="odor" value="aromatic" />
        <character name="life_style" value="shrub" />
      </structure>
    </statement>
    <statement id="875.txt-2">
      <text>Stems relatively numerous, brown or grayish green.</text>
      <structure id="o18259" name="stem">
        <character name="count" value="numerous" modifier="relatively" />
        <character name="coloration" value="brown" />
        <character name="coloration" value="green" modifier="grayish" />
      </structure>
    </statement>
    <statement id="875.txt-3">
      <text>Leaves ± deciduous (by late summer, turning yellow);</text>
      <structure id="o18260" name="leaf">
        <character name="duration_or_habit" value="deciduous" modifier="±" />
      </structure>
    </statement>
    <statement id="875.txt-4">
      <text>blades lanceolate, oblanceolate, or cuneate, 2.5–5.5 × 0.8–1.2+ cm, entire or irregularly 3–6-lobed (lobes to 1 / 3 blade lengths, 1.5+ mm wide, rounded or acute; leaves of flowering stems usually smaller, entire), faces ± sericeous or tomentose.</text>
      <structure id="o18261" name="blade">
        <character name="shape" value="lanceolate" />
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="cuneate" />
        <character char_type="range_value" name="length" from="2.5" from_unit="cm" to="5.5" to_unit="cm" />
        <character char_type="range_value" name="width" from="0.8" from_unit="cm" to="1.2" to_unit="cm" upper_restricted="false" />
        <character name="shape" value="entire" />
        <character name="shape" value="3-6-lobed" modifier="irregularly" />
      </structure>
      <structure id="o18262" name="face">
        <character name="pubescence" value="sericeous" modifier="±" />
        <character name="pubescence" value="tomentose" modifier="±" />
      </structure>
    </statement>
    <statement id="875.txt-5">
      <text>Heads (erect) in (leafy) paniculiform arrays 8–15(–25) × 0.5–3(–4) cm.</text>
      <structure id="o18263" name="head" />
      <structure id="o18264" name="array">
        <character name="architecture" value="paniculiform" />
        <character char_type="range_value" name="atypical_length" from="15" to="25" from_unit="cm" to_unit="cm" from_inclusive="false" />
        <character char_type="range_value" name="length" from="8" from_unit="cm" to="15" to_unit="cm" />
        <character char_type="range_value" name="atypical_width" from="3" to="4" from_unit="cm" to_unit="cm" from_inclusive="false" />
        <character char_type="range_value" name="width" from="0.5" from_unit="cm" to="3" to_unit="cm" />
      </structure>
      <relation id="r1932" name="in" from="o18263" to="o18264" negation="false" />
    </statement>
    <statement id="875.txt-6">
      <text>Involucres ovoid or lanceoloid, (2.5–)4–6(–7) mm.</text>
      <structure id="o18265" name="involucre">
        <character name="shape" value="ovoid" />
        <character name="shape" value="lanceoloid" />
        <character char_type="range_value" name="atypical_size" from="2.5" to="4" from_unit="mm" to_unit="mm" to_inclusive="false" />
        <character char_type="range_value" name="atypical_size" from="6" to="7" from_unit="mm" to_unit="mm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="6" to_unit="mm" />
      </structure>
    </statement>
    <statement id="875.txt-7">
      <text>Phyllaries lanceolate, sparsely to densely hairy.</text>
      <structure id="o18266" name="phyllary">
        <character name="shape" value="lanceolate" />
        <character name="pubescence" value="hairy" modifier="sparsely densely" />
