        <character char_type="range_value" name="width" from="10" from_unit="mm" to="15" to_unit="mm" />
      </structure>
      <relation id="r1629" name="in" from="o15084" to="o15085" negation="false" />
    </statement>
    <statement id="722.txt-5">
      <text>Involucres cupulate-campanulate, 3–3.5 mm, bases sparsely arachnose.</text>
      <structure id="o15086" name="involucre">
