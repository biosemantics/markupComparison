        <character char_type="range_value" name="length" from="5" from_unit="cm" to="12" to_unit="cm" upper_restricted="false" />
        <character char_type="range_value" name="width" from="5" from_unit="mm" to="]12-25" to_unit="mm" upper_restricted="false" />
        <character char_type="range_value" name="lwratio" from="3" to="5" />
        <character char_type="range_value" name="count" from="8" to="17" />
        <character name="pubescence" value="glabrate" modifier="abaxially" />
        <character name="pubescence" value="puberulent" modifier="adaxially" />
        <character name="relief" value="scabrellous" />
