        <character name="insertion_or_position" value="cauline" />
      </structure>
    </statement>
    <statement id="259.txt-3">
      <text>blades ovate-lanceolate (basal) to narrowly lanceolate (distal), 5–12+ cm × (5–)12–25+ mm, l/w = 3–5 (basal) or 8–17 (distal), abaxially glabrate (pitted, awl-shaped hairs in pits), adaxially puberulent and/or scabrellous.</text>
      <structure id="o4450" name="blade">
        <character char_type="range_value" name="shape" from="ovate-lanceolate" to="narrowly lanceolate" />
