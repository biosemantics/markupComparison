      </structure>
    </statement>
    <statement id="410.txt-2">
      <text>Leaves:</text>
      <structure id="o8042" name="leaf" />
    </statement>
    <statement id="410.txt-3">
      <text>basal 5–8+, cauline 2–3(–5+);</text>
      <structure id="o8043" name="leaf" constraint="basal">
