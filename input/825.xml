        <character char_type="range_value" name="count" from="25" to="30" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="825.txt-11">
      <text>corollas grayish or yellowish white, 2–3 mm.</text>
      <structure id="o17379" name="corolla">
        <character name="coloration" value="grayish" />
