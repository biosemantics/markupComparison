  <description>
    <statement id="689.txt-0">
      <text>Annuals (fragrant), 15–60 cm;</text>
    </statement>
    <statement id="689.txt-1">
      <text>taprooted or fibrous-rooted.</text>
      <structure id="o14405" name="whole_organism">
        <character char_type="range_value" name="size" from="15" from_unit="cm" to="60" to_unit="cm" />
        <character name="life_style" value="annual" />
        <character name="architecture" value="taprooted" />
        <character name="architecture" value="fibrous-rooted" />
      </structure>
    </statement>
    <statement id="689.txt-2">
      <text>Stems glandular-puberulent (without persistent tomentum), stipitate glands 0.1–0.2 mm, stalks narrower than gland widths.</text>
      <structure id="o14406" name="stem">
        <character name="pubescence" value="glandular-puberulent" />
      </structure>
      <structure id="o14407" name="gland">
        <character name="architecture" value="stipitate" />
        <character char_type="range_value" name="size" from="0.1" from_unit="mm" to="0.2" to_unit="mm" />
      </structure>
      <structure id="o14408" name="stalk">
        <character name="size" value="narrower" constraint="than gland widths" constraintid="o14409" />
      </structure>
      <structure id="o14409" name="gland">
        <character name="size" value="widths" />
      </structure>
    </statement>
    <statement id="689.txt-3">
      <text>Leaf blades linear to linear-lanceolate or linear-oblanceolate, 1.5–5.5 cm × 1.5–10 mm, bases not clasping, not decurrent, margins flat, faces bicolor, abaxial white to gray, tomentose, adaxial green, both minutely stipitate-glandular.</text>
      <structure id="o14410" name="blade" constraint="leaf">
        <character char_type="range_value" name="shape" from="linear" to="linear-lanceolate or linear-oblanceolate" />
        <character name="shape" value="linear" />
        <character name="shape" value="linear-lanceolate" />
        <character name="shape" value="linear-oblanceolate" />
        <character char_type="range_value" name="length" from="1.5" from_unit="cm" to="5.5" to_unit="cm" />
        <character char_type="range_value" name="width" from="1.5" from_unit="mm" to="10" to_unit="mm" />
      </structure>
      <structure id="o14411" name="base">
        <character name="architecture" value="clasping" modifier="not" />
        <character name="shape" value="decurrent" modifier="not" />
      </structure>
      <structure id="o14412" name="margin">
        <character name="shape" value="flat" />
      </structure>
      <structure id="o14413" name="face">
        <character name="coloration" value="bicolor" />
        <character name="insertion_or_position" value="abaxial" />
        <character name="coloration" value="white" />
        <character name="coloration" value="gray" />
        <character name="pubescence" value="tomentose" />
        <character name="insertion_or_position" value="adaxial" />
        <character name="coloration" value="green" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" modifier="minutely" />
      </structure>
    </statement>
    <statement id="689.txt-4">
      <text>Heads in corymbiform arrays.</text>
      <structure id="o14414" name="head" />
      <structure id="o14415" name="array">
        <character name="architecture" value="corymbiform" />
      </structure>
      <relation id="r1542" name="in" from="o14414" to="o14415" negation="false" />
    </statement>
    <statement id="689.txt-5">
      <text>Involucres turbinate-campanulate, 5–6 mm.</text>
      <structure id="o14416" name="involucre">
        <character name="shape" value="turbinate-campanulate" />
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="6" to_unit="mm" />
