        <character name="coloration" value="yellow" />
        <character char_type="range_value" name="size" from="12" from_unit="mm" to="18" to_unit="mm" />
      </structure>
    </statement>
    <statement id="282.txt-11">
      <text>Cypselae yellowish or reddish brown, fusiform, 4–7 mm, apices narrowed (not beaked), ribs 13–20;</text>
      <structure id="o5000" name="cypsela">
        <character name="coloration" value="yellowish" />
