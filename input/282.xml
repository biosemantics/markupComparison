      <text>pappi white, 5–7 mm (somewhat unequal).</text>
      <structure id="o5003" name="pappus">
        <character name="coloration" value="white" />
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="7" to_unit="mm" />
