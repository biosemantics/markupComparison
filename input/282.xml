        <character name="architecture" value="corymbiform" />
      </structure>
      <relation id="r676" name="in" from="o4989" to="o4990" negation="false" />
    </statement>
    <statement id="282.txt-6">
      <text>Calyculi of 7–9, lance-linear, glabrous or tomentulose bractlets 3–6 mm.</text>
      <structure id="o4991" name="calyculus" />
      <structure id="o4992" name="bractlet">
        <character char_type="range_value" name="count" from="7" to="9" />
        <character name="arrangement_or_shape" value="lance-linear" />
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="tomentulose" />
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="6" to_unit="mm" />
      </structure>
      <relation id="r677" name="consist_of" from="o4991" to="o4992" negation="false" />
    </statement>
    <statement id="282.txt-7">
      <text>Involucres campanulate, 8–13 × 5–9 mm.</text>
      <structure id="o4993" name="involucre">
        <character name="shape" value="campanulate" />
        <character char_type="range_value" name="length" from="8" from_unit="mm" to="13" to_unit="mm" />
        <character char_type="range_value" name="width" from="5" from_unit="mm" to="9" to_unit="mm" />
      </structure>
    </statement>
    <statement id="282.txt-8">
      <text>Phyllaries 10–17 (pale to dark green or nearly black) linear-lanceolate, 10–11 mm, (margins scarious) apices acute to obtuse (ciliate), abaxial faces ± canescent-tomentose, adaxial often with yellowish or black, appressed hairs.</text>
      <structure id="o4994" name="phyllary">
