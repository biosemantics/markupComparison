        <character char_type="range_value" name="width" from="1.5" from_unit="cm" to="7.5" to_unit="cm" />
      </structure>
      <structure id="o4986" name="margin">
        <character name="shape" value="lobed" modifier="pinnately" />
        <character name="shape" value="dentate" modifier="pinnately" />
      </structure>
      <structure id="o4987" name="apex">
        <character name="shape" value="acute" modifier="±" />
      </structure>
      <structure id="o4988" name="face">
        <character name="pubescence_or_relief" value="scabrous" modifier="slightly" />
      </structure>
    </statement>
    <statement id="282.txt-5">
      <text>Heads 12–14, in simple or compound, corymbiform arrays.</text>
      <structure id="o4989" name="head">
        <character char_type="range_value" name="count" from="12" to="14" />
