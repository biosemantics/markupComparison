        <character char_type="range_value" name="size" from="10" from_unit="mm" to="11" to_unit="mm" />
      </structure>
      <structure id="o4995" name="apex">
        <character char_type="range_value" name="shape" from="acute" to="obtuse" />
        <character name="shape" value="acute" />
        <character name="shape" value="obtuse" />
      </structure>
      <structure id="o4996" name="face" constraint="abaxial">
        <character name="pubescence" value="canescent-tomentose" modifier="±" />
        <character name="insertion_or_position" value="adaxial" modifier="often" constraint="with hairs" constraintid="o4997" />
      </structure>
      <structure id="o4997" name="hair">
        <character name="coloration" value="yellowish" />
        <character name="coloration" value="black" />
        <character name="orientation" value="appressed" />
      </structure>
    </statement>
    <statement id="282.txt-9">
      <text>Florets 30–100;</text>
      <structure id="o4998" name="floret">
        <character char_type="range_value" name="count" from="30" to="100" />
      </structure>
    </statement>
    <statement id="282.txt-10">
