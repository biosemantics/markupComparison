      <text>Phyllaries:</text>
      <structure id="o3939" name="phyllary" />
    </statement>
    <statement id="234.txt-6">
      <text>outer spreading linear (bases ± broad), abaxial faces arachnose to hirsute;</text>
      <structure id="o3940" name="phyllary" constraint="outer">
