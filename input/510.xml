      <structure id="o10407" name="floret">
        <character char_type="range_value" name="count" from="50" to="250" />
      </structure>
    </statement>
    <statement id="510.txt-11">
      <text>corollas yellow, tubes 3–6 mm, ligules 6–16 × 2–3 mm;</text>
      <structure id="o10408" name="corolla">
        <character name="coloration" value="yellow" />
      </structure>
      <structure id="o10409" name="tube">
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="6" to_unit="mm" />
      </structure>
      <structure id="o10410" name="ligule">
        <character char_type="range_value" name="length" from="6" from_unit="mm" to="16" to_unit="mm" />
        <character char_type="range_value" name="width" from="2" from_unit="mm" to="3" to_unit="mm" />
      </structure>
    </statement>
    <statement id="510.txt-12">
      <text>anthers 3–5 mm.</text>
      <structure id="o10411" name="anther">
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="510.txt-13">
      <text>Cypselae 9–14 mm;</text>
      <structure id="o10412" name="cypsela">
        <character char_type="range_value" name="size" from="9" from_unit="mm" to="14" to_unit="mm" />
      </structure>
    </statement>
    <statement id="510.txt-14">
      <text>bodies fusiform to narrowly conic, 3–5 mm, beaks 6–10 mm, lengths 1–3 times bodies, ribs flattened, ridged, or subalate, straight or slightly undulate;</text>
