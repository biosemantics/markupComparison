        <character char_type="range_value" name="size" from="3" from_unit="mm" to="5" to_unit="mm" />
      </structure>
      <structure id="o10414" name="beak">
        <character char_type="range_value" name="size" from="6" from_unit="mm" to="10" to_unit="mm" />
        <character char_type="range_value" name="size" from="1" to="3" constraint="times bodies" constraintid="o10415" />
      </structure>
      <structure id="o10415" name="body" />
      <structure id="o10416" name="rib">
        <character name="shape" value="flattened" />
        <character name="shape" value="ridged" />
        <character name="architecture" value="subalate" />
        <character name="course" value="straight" />
        <character name="shape" value="undulate" modifier="slightly" />
      </structure>
    </statement>
    <statement id="510.txt-15">
      <text>pappus bristles in 3–4 series, (4–)6–10 mm.</text>
      <structure id="o10417" name="bristle" constraint="pappus">
        <character char_type="range_value" name="atypical_size" from="4" to="6" from_unit="mm" to_unit="mm" to_inclusive="false" />
        <character char_type="range_value" name="size" from="6" from_unit="mm" to="10" to_unit="mm" />
      </structure>
      <structure id="o10418" name="series">
        <character char_type="range_value" name="count" from="3" to="4" />
      </structure>
      <relation id="r1194" name="in" from="o10417" to="o10418" negation="false" />
