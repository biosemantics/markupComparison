  <common_name>Coast Range agoseris</common_name>
  <synonym_of_species_name>Leontodon hirsutum Hooker, Fl. Bor.-Amer. 1: 296. 1833; Macrorhynchus harfordii Kellogg; Taraxacum hirsutum (Hooker) Torrey &amp; A. Gray</synonym_of_species_name>
  <description>
    <statement id="510.txt-0">
      <text>Stems 0.</text>
      <structure id="o10387" name="stem">
        <character name="count" value="0" />
      </structure>
    </statement>
    <statement id="510.txt-1">
      <text>Leaves erect to ascending;</text>
      <structure id="o10388" name="leaf">
        <character char_type="range_value" name="orientation" from="erect" to="ascending" />
        <character name="orientation" value="erect" />
        <character name="orientation" value="ascending" />
      </structure>
    </statement>
    <statement id="510.txt-2">
      <text>petioles rarely purplish, petiole margins glabrous or tomentose;</text>
      <structure id="o10389" name="petiole">
        <character name="coloration" value="purplish" modifier="rarely" />
      </structure>
      <structure id="o10390" name="margin" constraint="petiole">
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="tomentose" />
      </structure>
    </statement>
    <statement id="510.txt-3">
      <text>blades narrowly to broadly oblanceolate, (7–)10–30 cm, margins usually lobed to pinnatifid, rarely dentate, lobes 5–7(–9) pairs, lanceolate to oblanceolate, spreading to antrorse, lobules sometimes present, faces sparsely to densely hairy.</text>
      <structure id="o10391" name="blade">
        <character name="shape" value="oblanceolate" modifier="narrowly broadly" />
        <character char_type="range_value" name="atypical_size" from="7" to="10" from_unit="cm" to_unit="cm" to_inclusive="false" />
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="30" to_unit="cm" />
      </structure>
      <structure id="o10392" name="margin">
        <character name="shape" value="lobed" modifier="usually" />
        <character name="shape" value="pinnatifid" />
        <character name="shape" value="dentate" modifier="rarely" />
      </structure>
      <structure id="o10393" name="lobe">
        <character char_type="range_value" name="atypical_count" from="7" to="9" from_inclusive="false" />
        <character char_type="range_value" name="count" from="5" to="7" />
        <character char_type="range_value" name="shape" from="lanceolate" to="oblanceolate" />
        <character name="shape" value="lanceolate" />
        <character name="shape" value="oblanceolate" />
        <character char_type="range_value" name="orientation" from="spreading" to="antrorse" />
        <character name="orientation" value="spreading" />
        <character name="orientation" value="antrorse" />
      </structure>
      <structure id="o10394" name="lobule">
        <character name="presence" value="present" modifier="sometimes" />
      </structure>
      <structure id="o10395" name="face">
        <character name="pubescence" value="hairy" modifier="sparsely densely" />
      </structure>
    </statement>
    <statement id="510.txt-4">
      <text>Peduncles not notably elongating after flowering, 10–45 cm in fruit, glabrate, or basally and apically pubescent to villous, mostly stipitate-glandular.</text>
      <structure id="o10396" name="peduncle">
        <character name="size" value="elongating" modifier="not notably" constraint="after flowering, 10-45 cm in fruit" constraintid="o10397" />
        <character name="pubescence" value="glabrate" />
        <character name="pubescence" value="pubescent" modifier="apically" />
        <character name="pubescence" value="villous" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" modifier="mostly" />
      </structure>
      <structure id="o10397" name="fruit" />
    </statement>
    <statement id="510.txt-5">
      <text>Involucres obconic to campanulate, 1.5–2.5 cm in fruit.</text>
      <structure id="o10398" name="involucre">
        <character char_type="range_value" name="shape" from="obconic" to="campanulate" />
        <character name="shape" value="obconic" />
        <character name="shape" value="campanulate" />
        <character char_type="range_value" name="size" from="1.5" from_unit="cm" to="2.5" to_unit="cm" constraint="in fruit" constraintid="o10399" />
      </structure>
      <structure id="o10399" name="fruit" />
    </statement>
    <statement id="510.txt-6">
      <text>Phyllaries in 2–3 series, green or medially rosy purple, sometimes purple-black speckled, margins ciliate, faces ± villous, stipitate-glandular;</text>
      <structure id="o10400" name="phyllary">
        <character name="coloration" value="green" />
        <character name="coloration" value="purple" modifier="medially;rosy" />
        <character name="coloration" value="speckled" modifier="sometimes;purple-black" />
      </structure>
      <structure id="o10401" name="series">
        <character char_type="range_value" name="count" from="2" to="3" />
      </structure>
      <relation id="r1193" name="in" from="o10400" to="o10401" negation="false" />
      <structure id="o10402" name="margin">
        <character name="architecture_or_shape" value="ciliate" />
      </structure>
      <structure id="o10403" name="face">
        <character name="pubescence" value="villous" modifier="±" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="510.txt-7">
      <text>outer erect to spreading, adaxially ± tomentose;</text>
      <structure id="o10404" name="phyllary" constraint="outer">
        <character name="pubescence" value="tomentose" modifier="adaxially ±" />
      </structure>
    </statement>
    <statement id="510.txt-8">
      <text>inner erect, elongating after flowering.</text>
      <structure id="o10405" name="phyllary" constraint="inner">
        <character name="orientation" value="erect" />
        <character name="size" value="elongating" modifier="after flowering" />
      </structure>
    </statement>
    <statement id="510.txt-9">
      <text>Receptacles epaleate.</text>
      <structure id="o10406" name="receptacle">
        <character name="architecture" value="epaleate" />
      </structure>
    </statement>
    <statement id="510.txt-10">
