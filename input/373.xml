        <character name="fusion" value="connate" modifier="basally" />
      </structure>
      <structure id="o7136" name="series">
        <character char_type="range_value" name="count" from="2" to="3" upper_restricted="false" />
      </structure>
      <relation id="r877" name="in" from="o7135" to="o7136" negation="false" />
    </statement>
