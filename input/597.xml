    </statement>
    <statement id="597.txt-1">
      <text>Stems erect, much branched proximally, weakly striate proximally.</text>
      <structure id="o12396" name="stem">
        <character name="orientation" value="erect" />
        <character name="architecture_or_shape" value="branched" modifier="much ; proximally" />
        <character name="coloration_or_relief" value="striate" modifier="weakly ; proximally" />
