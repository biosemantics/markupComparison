      <structure id="o12403" name="phyllary">
        <character name="count" value="5" />
      </structure>
    </statement>
    <statement id="597.txt-8">
      <text>Florets 5;</text>
      <structure id="o12404" name="floret">
        <character name="count" value="5" />
      </structure>
    </statement>
    <statement id="597.txt-9">
