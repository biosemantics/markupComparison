    </statement>
    <statement id="597.txt-2">
      <text>Leaves:</text>
      <structure id="o12397" name="leaf" />
    </statement>
    <statement id="597.txt-3">
      <text>proximal blades linear-filiform , 30–140 × 1–3 mm;</text>
      <structure id="o12398" name="blade" constraint="proximal">
        <character name="shape" value="linear-filiform" />
        <character char_type="range_value" name="length" from="30" from_unit="mm" to="140" to_unit="mm" />
