        <character char_type="range_value" name="width" from="6" from_unit="mm" to="8" to_unit="mm" />
      </structure>
    </statement>
    <statement id="794.txt-6">
      <text>inner phyllaries progressively narrower, less hairy, more scarious.</text>
      <structure id="o16747" name="phyllary" constraint="inner">
        <character name="size" value="narrower" modifier="progressively" />
        <character name="pubescence" value="hairy" modifier="less" />
        <character name="texture" value="scarious" />
