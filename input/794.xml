      <text>Leaves:</text>
      <structure id="o16740" name="leaf" />
    </statement>
    <statement id="794.txt-2">
      <text>basal blades ± elliptic, mostly 15–40 cm × 100–200+ mm (bases decurrent onto strongly ribbed petioles, margins callose-denticulate, otherwise entire, abaxial faces velvety-woolly, adaxial thinly hairy);</text>
      <structure id="o16741" name="blade" constraint="basal">
        <character name="arrangement_or_shape" value="elliptic" modifier="±" />
      </structure>
    </statement>
    <statement id="794.txt-3">
      <text>cauline blades ovate or elliptic to lanceolate, 10–30 cm × 45–120 mm, bases cordate, clasping, margins serrate.</text>
      <structure id="o16742" name="blade" constraint="cauline">
        <character char_type="range_value" name="shape" from="elliptic" to="lanceolate" />
        <character name="shape" value="ovate" />
