        <character name="shape" value="lanceolate" />
        <character char_type="range_value" name="length" from="10" from_unit="cm" to="30" to_unit="cm" />
        <character char_type="range_value" name="width" from="45" from_unit="mm" to="120" to_unit="mm" />
      </structure>
      <structure id="o16743" name="base">
        <character name="shape" value="cordate" />
        <character name="architecture" value="clasping" />
      </structure>
      <structure id="o16744" name="margin">
        <character name="shape" value="serrate" />
      </structure>
    </statement>
    <statement id="794.txt-4">
