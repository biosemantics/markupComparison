        <character char_type="range_value" name="size" from="30" from_unit="mm" to="40" to_unit="mm" />
      </structure>
    </statement>
    <statement id="794.txt-5">
      <text>Outer phyllaries ovate, oblong, or ± deltate to lanceolate, 12–20(–25+) × 6–8(–20+) mm (abaxially velvety-hairy);</text>
      <structure id="o16746" name="phyllary" constraint="outer">
        <character name="shape" value="ovate" />
        <character name="shape" value="oblong" />
        <character char_type="range_value" name="shape" from="deltate" to="lanceolate" modifier="±" />
        <character name="shape" value="deltate" modifier="±" />
