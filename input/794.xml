      </structure>
    </statement>
    <statement id="794.txt-8">
      <text>corolla laminae (10–)20–30+ mm.</text>
      <structure id="o16749" name="lamina" constraint="corolla">
        <character char_type="range_value" name="atypical_size" from="10" to="20" from_unit="mm" to_unit="mm" to_inclusive="false" />
