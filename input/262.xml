        <character name="insertion_or_position" value="cauline" modifier="mostly" />
      </structure>
    </statement>
    <statement id="262.txt-3">
      <text>blades ± lanceolate, 5–12(–20+) cm × 5–18(–40+) mm, l/w = 5–9(–14+), abaxially glabrate (pitted, with awl-shaped hairs in pits), adaxially scabrellous, resin-gland-dotted (sometimes pitted).</text>
      <structure id="o4544" name="blade">
        <character name="shape" value="lanceolate" modifier="±" />
        <character char_type="range_value" name="atypical_length" from="12" to="20" from_unit="cm" to_unit="cm" upper_restricted="false" from_inclusive="false" />
