        <character char_type="range_value" name="atypical_lwratio" from="9" to="14" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="lwratio" from="5" to="9" />
        <character name="pubescence" value="glabrate" modifier="abaxially" />
        <character name="relief" value="scabrellous" modifier="adaxially" />
        <character name="coloration_or_relief" value="resin-gland-dotted" />
