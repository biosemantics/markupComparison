    <statement id="968.txt-0">
      <text>Annuals, 10–30(–80+) cm.</text>
      <structure id="o19917" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="30" to="80" from_unit="cm" to_unit="cm" upper_restricted="false" from_inclusive="false" />
