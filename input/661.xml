        <character name="architecture" value="1-nerved" />
        <character name="shape" value="cuneate-spatulate" modifier="usually" />
        <character name="shape" value="oblanceolate" modifier="sometimes" />
        <character char_type="range_value" name="length" from="5" from_unit="mm" to="16" to_unit="mm" />
        <character char_type="range_value" name="width" from="3" from_unit="mm" to="10" to_unit="mm" />
      </structure>
      <structure id="o13861" name="tip">
        <character name="shape" value="mucronate" />
      </structure>
      <structure id="o13862" name="face">
        <character name="pubescence" value="gray-pubescent" />
      </structure>
    </statement>
    <statement id="661.txt-4">
      <text>Cauline leaves linear, 3–14 mm, not flagged (apices acute).</text>
      <structure id="o13863" name="leaf" constraint="cauline">
        <character name="arrangement_or_shape" value="linear" />
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="14" to_unit="mm" />
        <character name="orientation" value="flagged" modifier="not" />
      </structure>
    </statement>
    <statement id="661.txt-5">
      <text>Heads borne singly or 2–5 in corymbiform arrays.</text>
      <structure id="o13864" name="head">
        <character name="arrangement" value="singly" />
        <character char_type="range_value" name="count" from="2" to="5" constraint="in arrays" constraintid="o13865" />
      </structure>
      <structure id="o13865" name="array">
        <character name="architecture" value="corymbiform" />
