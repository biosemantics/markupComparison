    </statement>
    <statement id="661.txt-6">
      <text>Involucres:</text>
      <structure id="o13866" name="involucre" />
    </statement>
    <statement id="661.txt-7">
      <text>staminate 4.5–6.5 mm;</text>
      <structure id="o13867" name="involucre" constraint="staminate">
