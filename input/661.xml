      </structure>
    </statement>
    <statement id="661.txt-13">
      <text>Cypselae 0.9–2 mm, sparingly papillate;</text>
      <structure id="o13873" name="cypsela">
        <character char_type="range_value" name="size" from="0.9" from_unit="mm" to="2" to_unit="mm" />
