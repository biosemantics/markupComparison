        <character name="reproduction" value="dioecious" />
      </structure>
    </statement>
    <statement id="661.txt-1">
      <text>Plants 2–7 cm (stems stipitate-glandular).</text>
      <structure id="o13858" name="whole_organism">
        <character char_type="range_value" name="size" from="2" from_unit="cm" to="7" to_unit="cm" />
        <character name="life_style" value="plant" />
