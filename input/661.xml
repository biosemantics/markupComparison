      </structure>
    </statement>
    <statement id="661.txt-9">
      <text>Phyllaries distally light brown, dark brown, or olivaceous.</text>
      <structure id="o13869" name="phyllary">
        <character name="coloration" value="brown" modifier="distally ;light" />
        <character name="coloration" value="brown" modifier="distally ;dark" />
