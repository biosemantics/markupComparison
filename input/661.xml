  <species_name>Antennaria aromatica</species_name>
  <authority>Evert</authority>
  <place_of_publication>Madroño 31: 109, fig. 1. 1984</place_of_publication>
  <common_name>Scented or aromatic pussytoes</common_name>
  <description>
    <statement id="661.txt-0">
      <text>Dioecious.</text>
