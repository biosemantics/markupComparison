      <structure id="o2019" name="apex">
        <character name="shape" value="obtuse" />
      </structure>
    </statement>
    <statement id="17.txt-7">
      <text>Receptacles convex, smooth, glabrous, epaleate.</text>
      <structure id="o2020" name="receptacle">
        <character name="shape" value="convex" />
        <character name="architecture_or_relief" value="smooth" />
        <character name="pubescence" value="glabrous" />
        <character name="architecture" value="epaleate" />
      </structure>
    </statement>
    <statement id="17.txt-8">
      <text>Florets:</text>
      <structure id="o2021" name="floret" />
    </statement>
    <statement id="17.txt-9">
      <text>outer 3–7 florets pistillate, corollas white or ochroleucous, obscurely zygomorphic (± 2-lipped; staminodes 4–5, minute; style branches relatively short);</text>
      <structure id="o2022" name="floret">
        <character name="position" value="outer" />
        <character char_type="range_value" name="count" from="3" to="7" />
        <character name="architecture" value="pistillate" />
      </structure>
      <structure id="o2023" name="corolla">
        <character name="coloration" value="white" />
        <character name="coloration" value="ochroleucous" />
        <character name="architecture" value="zygomorphic" modifier="obscurely" />
      </structure>
    </statement>
    <statement id="17.txt-10">
      <text>inner 2–10 florets functionally staminate, corollas white or ochroleucous, actinomorphic (lobes 5);</text>
      <structure id="o2024" name="floret">
        <character name="position" value="inner" />
        <character char_type="range_value" name="count" from="2" to="10" />
        <character name="architecture" value="staminate" modifier="functionally" />
      </structure>
      <structure id="o2025" name="corolla">
        <character name="coloration" value="white" />
        <character name="coloration" value="ochroleucous" />
        <character name="architecture" value="actinomorphic" />
      </structure>
    </statement>
    <statement id="17.txt-11">
      <text>anther basal appendages (relatively short) entire, apical appendages narrowly triangular;</text>
      <structure id="o2026" name="appendage" constraint="anther basal">
        <character name="shape" value="entire" />
      </structure>
      <structure id="o2027" name="appendage" constraint="apical">
        <character name="shape" value="triangular" modifier="narrowly" />
      </structure>
    </statement>
    <statement id="17.txt-12">
      <text>style branches none (apices of styles obtuse to acute).</text>
      <structure id="o2028" name="branch" constraint="style" />
    </statement>
    <statement id="17.txt-13">
      <text>Cypselae clavate to obovoid, not beaked, ± ribbed, faces distally stipitate-glandular;</text>
      <structure id="o2029" name="cypsela">
        <character char_type="range_value" name="shape" from="clavate" to="obovoid" />
        <character name="shape" value="clavate" />
        <character name="shape" value="obovoid" />
        <character name="shape" value="beaked" modifier="not" />
