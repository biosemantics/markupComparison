      <structure id="o14568" name="margin">
        <character name="shape" value="prickly-dentate" modifier="irregularly" />
      </structure>
      <structure id="o14569" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="7.txt-4">
