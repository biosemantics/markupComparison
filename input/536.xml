    </statement>
    <statement id="536.txt-6">
      <text>Peduncles erect or curved-ascending , ebracteate.</text>
      <structure id="o10990" name="peduncle">
        <character name="orientation" value="erect" />
        <character name="orientation" value="curved-ascending" />
        <character name="architecture" value="ebracteate" />
      </structure>
    </statement>
    <statement id="536.txt-7">
      <text>Involucres ovoid to fusiform in fruit, 10–22 mm.</text>
      <structure id="o10991" name="involucre">
        <character char_type="range_value" name="shape" from="ovoid" to="fusiform" />
        <character name="shape" value="ovoid" />
        <character name="shape" value="fusiform" constraint="in fruit" constraintid="o10992" />
        <character char_type="range_value" name="size" from="10" from_unit="mm" to="22" to_unit="mm" />
      </structure>
      <structure id="o10992" name="fruit" />
    </statement>
    <statement id="536.txt-8">
      <text>Phyllaries:</text>
      <structure id="o10993" name="phyllary" />
    </statement>
    <statement id="536.txt-9">
      <text>apices erect, acute to acuminate, abaxial faces glabrous;</text>
      <structure id="o10994" name="apex">
        <character name="orientation" value="erect" />
