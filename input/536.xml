      <structure id="o10996" name="phyllary" constraint="outer">
        <character name="shape" value="deltate" />
      </structure>
    </statement>
    <statement id="536.txt-11">
      <text>inner lanceolate, (midveins often purple, thickened).</text>
      <structure id="o10997" name="phyllary" constraint="inner">
        <character name="shape" value="lanceolate" />
      </structure>
    </statement>
    <statement id="536.txt-12">
