    </statement>
    <statement id="119.txt-1">
      <text>Heads in openly branched arrays, long-pedunculate, elevated well above proximal leaves.</text>
      <structure id="o463" name="head">
        <character name="architecture" value="long-pedunculate" />
        <character name="prominence" value="elevated" modifier="well" constraint="above leaves" constraintid="o465" />
