  <common_name>Cuesta Ridge thistle</common_name>
  <description>
    <statement id="119.txt-0">
      <text>Plants erect, 30–200 cm, densely gray-tomentose.</text>
      <structure id="o462" name="whole_organism">
        <character name="orientation" value="erect" />
        <character char_type="range_value" name="size" from="30" from_unit="cm" to="200" to_unit="cm" />
