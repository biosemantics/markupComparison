      </structure>
    </statement>
    <statement id="433.txt-10">
      <text>Cypselae monomorphic, all beaked;</text>
      <structure id="o8605" name="cypsela">
        <character name="habit" value="monomorphic" />
        <character name="shape" value="beaked" />
      </structure>
    </statement>
    <statement id="433.txt-11">
      <text>bodies golden brown, fusiform, 8–10 mm, muricate, ribs 4–5;</text>
      <structure id="o8606" name="body">
        <character name="coloration" value="brown" modifier="golden" />
        <character name="shape" value="fusiform" />
        <character char_type="range_value" name="size" from="8" from_unit="mm" to="10" to_unit="mm" />
