        <character name="shape" value="lanceolate" />
        <character name="shape" value="oblanceolate" />
        <character char_type="range_value" name="size" from="6" from_unit="cm" to="25" to_unit="cm" />
      </structure>
      <structure id="o3605" name="margin">
