        <character name="architecture" value="petiolate" />
      </structure>
      <structure id="o15145" name="blade">
        <character name="architecture" value="3-nerved" />
        <character char_type="range_value" name="shape" from="lanceolate" to="oblanceolate" />
        <character name="shape" value="lanceolate" />
        <character name="shape" value="oblanceolate" />
        <character char_type="range_value" name="length" from="5" from_unit="cm" to="12" to_unit="cm" />
