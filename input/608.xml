        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="608.txt-1">
      <text>Stems usually scapiform, usually branching from bases, proximally glabrous or sparsely to densely pilosulous.</text>
      <structure id="o12686" name="stem">
        <character name="shape" value="scapiform" modifier="usually" />
        <character name="architecture" value="branching" modifier="usually" constraint="from bases" constraintid="o12687" />
