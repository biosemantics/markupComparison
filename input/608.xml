        <character name="insertion_or_position" value="distal" />
        <character name="shape" value="linear-filiform" />
      </structure>
      <structure id="o12690" name="margin">
        <character name="shape" value="entire" />
      </structure>
    </statement>
    <statement id="608.txt-3">
