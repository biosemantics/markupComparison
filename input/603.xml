        <character name="shape" value="3-angled" modifier="obtusely" constraint="at nerves" constraintid="o12598" />
      </structure>
      <structure id="o12597" name="side" />
      <structure id="o12598" name="nerve" constraint="lateral">
        <character name="count" value="1" />
        <character name="insertion_or_position" value="adaxial" />
        <character name="count" value="2" />
      </structure>
    </statement>
    <statement id="603.txt-5">
      <text>2 n = 18.</text>
