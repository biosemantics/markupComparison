    </statement>
    <statement id="871.txt-3">
      <text>Leaves persistent, usually bright green to dark green, sometimes gray-green;</text>
      <structure id="o18208" name="leaf">
        <character name="duration" value="persistent" />
        <character name="coloration" value="green" modifier="usually;bright" />
        <character name="coloration" value="green" modifier="dark" />
        <character name="coloration" value="green" modifier="sometimes;gray" />
      </structure>
    </statement>
    <statement id="871.txt-4">
      <text>blades cuneate, 3-lobed (lobes to 1 / 3 blade lengths, 0.5–2 × 0.2–1 cm, rounded), faces sparsely hairy, gland-dotted.</text>
      <structure id="o18209" name="blade">
        <character name="shape" value="cuneate" />
        <character name="shape" value="3-lobed" />
      </structure>
      <structure id="o18210" name="face">
