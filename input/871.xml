        <character name="odor" value="aromatic" modifier="pungently" />
        <character name="life_style" value="shrub" />
      </structure>
    </statement>
    <statement id="871.txt-2">
      <text>Stems brown, glabrescent (vegetative of approximately equal heights, giving plants a ‘hedged’ appearance; bark dark gray, exfoliating with age).</text>
      <structure id="o18207" name="stem">
        <character name="coloration" value="brown" />
        <character name="pubescence" value="glabrescent" />
