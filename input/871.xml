        <character name="coloration_or_relief" value="gland-dotted" />
      </structure>
    </statement>
    <statement id="871.txt-5">
      <text>Heads in paniculiform arrays 4–10 × 0.5–3 cm (branches ± erect; peduncles slender).</text>
      <structure id="o18211" name="head" />
