      <structure id="o4576" name="scale" constraint="outer">
        <character char_type="range_value" name="count" from="25" to="30" />
        <character char_type="range_value" name="size" from="0.5" from_unit="mm" to="1.1" to_unit="mm" />
        <character name="size" value="contrasting" constraint="with bristles" constraintid="o4577" />
      </structure>
      <structure id="o4577" name="bristle" constraint="inner">
        <character char_type="range_value" name="count" from="30" to="40" upper_restricted="false" />
        <character char_type="range_value" name="count" from="5" to="7" upper_restricted="false" />
