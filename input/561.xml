      <text>Florets 5.</text>
      <structure id="o11572" name="floret">
        <character name="count" value="5" />
      </structure>
    </statement>
    <statement id="561.txt-10">
      <text>Cypselae light to dark tan, 3.8–4.2 mm, faces slightly bumpy to tuberculate, (grooved);</text>
      <structure id="o11573" name="cypsela">
        <character char_type="range_value" name="coloration" from="light" to="dark-tan" />
        <character name="coloration" value="light" />
        <character name="coloration" value="tan" modifier="dark" />
        <character char_type="range_value" name="size" from="3.8" from_unit="mm" to="4.2" to_unit="mm" />
      </structure>
