        <character name="texture" value="bumpy" modifier="slightly" />
        <character name="relief" value="tuberculate" />
      </structure>
    </statement>
    <statement id="561.txt-11">
      <text>pappi of 15–18 tan bristles (connate in groups of 2–4, bases persistent), plumose to tops of bases.</text>
      <structure id="o11575" name="pappus" />
      <structure id="o11576" name="bristle">
