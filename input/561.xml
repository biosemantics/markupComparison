  <common_name>Stiff-branched wirelettuce</common_name>
  <description>
    <statement id="561.txt-0">
      <text>Annuals, 0–100 cm.</text>
      <structure id="o11559" name="whole_organism">
        <character char_type="range_value" name="size" from="0" from_unit="cm" to="100" to_unit="cm" />
        <character name="life_style" value="annual" />
      </structure>
    </statement>
    <statement id="561.txt-1">
      <text>Stems single, branched (branches nearly at right angles, stiff), glabrous.</text>
      <structure id="o11560" name="stem">
        <character name="count" value="single" />
        <character name="architecture_or_shape" value="branched" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="561.txt-2">
      <text>Leaves withered at flowering;</text>
      <structure id="o11561" name="leaf">
        <character name="duration" value="withered" modifier="at flowering" />
      </structure>
    </statement>
    <statement id="561.txt-3">
      <text>basal blades oblanceolate, 6–10 cm, margins entire or toothed (teeth minute, faces glabrous);</text>
      <structure id="o11562" name="blade" constraint="basal">
        <character name="shape" value="oblanceolate" />
        <character char_type="range_value" name="size" from="6" from_unit="cm" to="10" to_unit="cm" />
      </structure>
      <structure id="o11563" name="margin">
        <character name="shape" value="entire" />
        <character name="shape" value="toothed" />
      </structure>
    </statement>
    <statement id="561.txt-4">
      <text>cauline much reduced, bractlike.</text>
      <structure id="o11564" name="leaf" constraint="cauline">
        <character name="size" value="reduced" modifier="much" />
        <character name="shape" value="bractlike" />
      </structure>
    </statement>
    <statement id="561.txt-5">
      <text>Heads borne singly along branches or in paniculiform arrays .</text>
      <structure id="o11565" name="head" />
      <structure id="o11566" name="branch" />
      <relation id="r1333" name="borne along" from="o11565" to="o11566" negation="false" />
      <structure id="o11567" name="array">
        <character name="architecture" value="paniculiform" />
      </structure>
      <relation id="r1334" name="in" from="o11565" to="o11567" negation="false" />
    </statement>
    <statement id="561.txt-6">
      <text>Peduncles 2–10 mm.</text>
      <structure id="o11568" name="peduncle">
        <character char_type="range_value" name="size" from="2" from_unit="mm" to="10" to_unit="mm" />
      </structure>
    </statement>
    <statement id="561.txt-7">
      <text>Calyculi of appressed bractlets.</text>
      <structure id="o11569" name="calyculus" />
      <structure id="o11570" name="bractlet">
        <character name="orientation" value="appressed" />
      </structure>
      <relation id="r1335" name="consist_of" from="o11569" to="o11570" negation="false" />
    </statement>
    <statement id="561.txt-8">
      <text>Involucres 6–9 mm.</text>
      <structure id="o11571" name="involucre">
        <character char_type="range_value" name="size" from="6" from_unit="mm" to="9" to_unit="mm" />
      </structure>
    </statement>
