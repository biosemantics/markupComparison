    <statement id="607.txt-2">
      <text>Stems usually 1, sometimes 2–5+, erect, unbranched or branched proximally and/or distally, glabrous or pilosulous.</text>
      <structure id="o12655" name="stem">
        <character name="count" value="1" modifier="usually" />
        <character char_type="range_value" name="count" from="2" to="5" upper_restricted="false" modifier="sometimes" />
