        <character name="architecture" value="unbranched" modifier="proximally" />
        <character name="architecture" value="branched" modifier="proximally" />
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="pilosulous" />
      </structure>
    </statement>
    <statement id="607.txt-3">
