        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="villous" />
        <character name="architecture" value="eglandular" modifier="mostly" />
      </structure>
    </statement>
    <statement id="509.txt-3">
      <text>Corollas ± equal to phyllaries at flowering, ligules 3–6 mm;</text>
