        <character name="coloration_or_relief" value="striate" />
        <character name="architecture_or_shape" value="much-branched" modifier="often" constraint="from bases" constraintid="o12517" />
        <character name="pubescence" value="glabrous" />
      </structure>
      <structure id="o12517" name="base" />
    </statement>
    <statement id="600.txt-3">
      <text>Leaves:</text>
      <structure id="o12518" name="leaf" />
    </statement>
    <statement id="600.txt-4">
      <text>proximal blades linear , 50–70 × 1–2 mm, entire or sparingly laciniate;</text>
      <structure id="o12519" name="blade" constraint="proximal">
        <character name="arrangement_or_shape" value="linear" />
        <character char_type="range_value" name="length" from="50" from_unit="mm" to="70" to_unit="mm" />
        <character char_type="range_value" name="width" from="1" from_unit="mm" to="2" to_unit="mm" />
        <character name="shape" value="entire" />
        <character name="shape" value="laciniate" modifier="sparingly" />
      </structure>
    </statement>
    <statement id="600.txt-5">
      <text>cauline 40 mm or less, reduced to scales distally.</text>
      <structure id="o12520" name="leaf" constraint="cauline">
        <character name="size" value="40" unit="mm" />
        <character name="size" value="40" unit="mm" modifier="less" />
      </structure>
      <structure id="o12521" name="scale" />
      <relation id="r1451" name="reduced to" from="o12520" to="o12521" negation="false" modifier="distally" />
