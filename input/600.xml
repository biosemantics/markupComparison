        <character char_type="range_value" name="size" from="25" from_unit="cm" to="60" to_unit="cm" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="600.txt-1">
      <text>taproots deep, vertical, woody.</text>
      <structure id="o12515" name="taproot">
        <character name="depth" value="deep" />
        <character name="orientation" value="vertical" />
        <character name="texture" value="woody" />
      </structure>
    </statement>
    <statement id="600.txt-2">
      <text>Stems ascending to erect, pale green, striate, often much-branched from bases and distally, glabrous.</text>
      <structure id="o12516" name="stem">
        <character char_type="range_value" name="orientation" from="ascending" to="erect" />
        <character name="orientation" value="ascending" />
