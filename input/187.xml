    <statement id="187.txt-11">
      <text>corollas blue, pink, or white, tubes very slender, usually bent distally, throats abruptly expanded, lobes linear;</text>
      <structure id="o2475" name="corolla">
        <character name="coloration" value="blue" />
        <character name="coloration" value="pink" />
