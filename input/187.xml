      </structure>
      <structure id="o2468" name="margin">
        <character name="shape" value="entire" />
      </structure>
      <structure id="o2469" name="apex">
        <character char_type="range_value" name="shape" from="acute" to="acuminate" />
        <character name="shape" value="acute" />
        <character name="shape" value="acuminate" />
      </structure>
      <structure id="o2470" name="phyllary">
        <character name="architecture" value="bristly-ciliate-or-plumose" />
      </structure>
      <structure id="o2471" name="phyllary" constraint="innermost" />
      <relation id="r354" name="part_of" from="o2470" to="o2471" negation="false" />
    </statement>
    <statement id="187.txt-9">
      <text>Receptacles flat, epaleate , bearing setiform scales (“flattened bristles”).</text>
      <structure id="o2472" name="receptacle">
        <character name="shape" value="flat" />
        <character name="architecture" value="epaleate" />
