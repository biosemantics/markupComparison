  <description>
    <statement id="117.txt-0">
      <text>Plants compactly branched, forming low rounded mounds, 5–100 cm, densely gray-tomentose.</text>
      <structure id="o438" name="whole_organism">
        <character name="architecture_or_shape" value="branched" modifier="compactly" />
