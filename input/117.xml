        <character name="pubescence" value="gray-tomentose" modifier="densely" />
      </structure>
    </statement>
    <statement id="117.txt-1">
      <text>Leaf faces gray-tomentose or adaxial ± glabrate.</text>
      <structure id="o440" name="face" constraint="leaf">
        <character name="pubescence" value="gray-tomentose" />
