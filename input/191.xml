      <structure id="o2630" name="apex">
        <character name="architecture_or_relief" value="smooth" />
      </structure>
      <structure id="o2631" name="collar">
        <character name="prominence" value="prominent" />
      </structure>
      <relation id="r372" name="without" from="o2630" to="o2631" negation="false" />
      <structure id="o2632" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
      <structure id="o2633" name="scar" constraint="basal attachment">
        <character name="shape_or_orientation" value="oblique" />
        <character name="insertion_or_position" value="lateral" />
      </structure>
    </statement>
    <statement id="191.txt-16">
      <text>pappi of several series, outer of stiff, scabrous bristles , inner a single abaxial scale.</text>
      <structure id="o2634" name="pappus">
        <character name="position" value="outer" constraint="of bristles" constraintid="o2636" />
        <character name="position" value="inner" />
      </structure>
      <structure id="o2635" name="series">
        <character name="count" value="several" />
      </structure>
      <relation id="r373" name="consist_of" from="o2634" to="o2635" negation="false" />
      <structure id="o2636" name="bristle">
        <character name="texture" value="stiff" />
        <character name="pubescence_or_relief" value="scabrous" />
      </structure>
      <structure id="o2637" name="scale" constraint="abaxial">
        <character name="count" value="single" />
      </structure>
    </statement>
