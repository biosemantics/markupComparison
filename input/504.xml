  <description>
    <statement id="504.txt-0">
      <text>Leaves :</text>
      <structure id="o10227" name="leaf" />
    </statement>
    <statement id="504.txt-1">
      <text>blades linear to filiform, 10–36 cm × 2–4(–8) mm (excluding lobes), margins usually laciniately or finely pinnatifid, sometimes toothed, lobes or teeth linear to filiform.</text>
      <structure id="o10228" name="blade">
        <character char_type="range_value" name="shape" from="linear" to="filiform" />
        <character name="shape" value="linear" />
        <character name="shape" value="filiform" />
        <character char_type="range_value" name="length" from="10" from_unit="cm" to="36" to_unit="cm" />
        <character char_type="range_value" name="atypical_width" from="4" to="8" from_unit="mm" to_unit="mm" from_inclusive="false" />
        <character char_type="range_value" name="width" from="2" from_unit="mm" to="4" to_unit="mm" />
      </structure>
      <structure id="o10229" name="margin">
        <character name="shape" value="pinnatifid" modifier="usually laciniately finely" />
        <character name="shape" value="toothed" modifier="sometimes" />
      </structure>
      <structure id="o10230" name="lobe">
        <character char_type="range_value" name="shape" from="linear" to="filiform" />
        <character name="shape" value="linear" />
        <character name="shape" value="filiform" />
      </structure>
      <structure id="o10231" name="tooth" />
    </statement>
    <statement id="504.txt-2">
      <text>Involucres campanulate, 2–4 cm in fruit.</text>
