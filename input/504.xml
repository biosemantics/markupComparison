      <structure id="o10233" name="fruit" />
    </statement>
    <statement id="504.txt-3">
      <text>Phyllaries mostly medially rosy purple and spotted, ± lanceolate, margins usually entire, rarely dentate;</text>
      <structure id="o10234" name="phyllary">
        <character name="coloration" value="purple and spotted" modifier="mostly medially;rosy" />
        <character name="shape" value="lanceolate" modifier="±" />
