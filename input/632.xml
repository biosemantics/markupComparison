    </statement>
    <statement id="632.txt-8">
      <text>pistillate 4–6.5 mm.</text>
      <structure id="o13253" name="involucre" constraint="pistillate">
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="6.5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="632.txt-9">
