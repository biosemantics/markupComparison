      </structure>
    </statement>
    <statement id="632.txt-12">
      <text>pistillate 2.5–4 mm.</text>
      <structure id="o13257" name="corolla" constraint="pistillate">
        <character char_type="range_value" name="size" from="2.5" from_unit="mm" to="4" to_unit="mm" />
      </structure>
    </statement>
    <statement id="632.txt-13">
      <text>Cypselae 1–1.8 mm, glandular-puberulent;</text>
      <structure id="o13258" name="cypsela">
        <character char_type="range_value" name="size" from="1" from_unit="mm" to="1.8" to_unit="mm" />
        <character name="pubescence" value="glandular-puberulent" />
