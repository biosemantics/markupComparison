    <statement id="632.txt-2">
      <text>Stolons none.</text>
      <structure id="o13244" name="stolon" />
    </statement>
    <statement id="632.txt-3">
      <text>Basal leaves 1-nerved, linear to narrowly oblanceolate, 15–50 × 1–2(–4) mm, tips acute, not flagged, faces ± gray tomentose.</text>
      <structure id="o13245" name="leaf" constraint="basal">
        <character name="architecture" value="1-nerved" />
        <character char_type="range_value" name="shape" from="linear" to="narrowly oblanceolate" />
        <character name="shape" value="linear" />
        <character name="shape" value="oblanceolate" modifier="narrowly" />
        <character char_type="range_value" name="length" from="15" from_unit="mm" to="50" to_unit="mm" />
        <character char_type="range_value" name="atypical_width" from="2" to="4" from_unit="mm" to_unit="mm" from_inclusive="false" />
        <character char_type="range_value" name="width" from="1" from_unit="mm" to="2" to_unit="mm" />
      </structure>
      <structure id="o13246" name="tip">
        <character name="shape" value="acute" />
        <character name="orientation" value="flagged" modifier="not" />
      </structure>
      <structure id="o13247" name="face">
        <character name="coloration" value="gray" modifier="±" />
        <character name="pubescence" value="tomentose" />
      </structure>
    </statement>
    <statement id="632.txt-4">
      <text>Cauline leaves (gradually reduced distally) narrowly linear, 5–60 mm, distalmost flagged.</text>
      <structure id="o13248" name="leaf" constraint="cauline">
        <character name="arrangement_or_shape" value="linear" modifier="narrowly" />
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="60" to_unit="mm" />
        <character name="position" value="distalmost" />
        <character name="orientation" value="flagged" />
      </structure>
    </statement>
    <statement id="632.txt-5">
      <text>Heads 2–8(–10) in subcapitate arrays.</text>
      <structure id="o13249" name="head">
        <character char_type="range_value" name="atypical_count" from="8" to="10" from_inclusive="false" />
        <character char_type="range_value" name="count" from="2" to="8" constraint="in arrays" constraintid="o13250" />
      </structure>
      <structure id="o13250" name="array">
        <character name="architecture" value="subcapitate" />
      </structure>
    </statement>
    <statement id="632.txt-6">
      <text>Involucres:</text>
      <structure id="o13251" name="involucre" />
    </statement>
    <statement id="632.txt-7">
      <text>staminate 4–5 mm;</text>
      <structure id="o13252" name="involucre" constraint="staminate">
