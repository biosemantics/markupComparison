        <character name="life_style" value="annual" />
      </structure>
    </statement>
    <statement id="964.txt-1">
      <text>Stems 1, erect, usually branched distally, glabrous or sparsely hairy (hairs basifixed).</text>
      <structure id="o19852" name="stem">
        <character name="count" value="1" />
        <character name="orientation" value="erect" />
        <character name="architecture_or_shape" value="branched" modifier="usually ; distally" />
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="hairy" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="964.txt-2">
      <text>Leaves mostly cauline;</text>
    </statement>
    <statement id="964.txt-3">
      <text>alternate;</text>
    </statement>
    <statement id="964.txt-4">
      <text>petiolate or sessile;</text>
      <structure id="o19853" name="leaf">
        <character name="insertion_or_position" value="cauline" modifier="mostly" />
        <character name="arrangement" value="alternate" />
        <character name="architecture" value="petiolate" />
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="964.txt-5">
      <text>blades obovate to oblong (bases sometimes clasping), usually 2-pinnately lobed, ultimate margins usually dentate, rarely entire, faces glabrous.</text>
      <structure id="o19854" name="blade">
        <character char_type="range_value" name="shape" from="obovate" to="oblong" />
        <character name="shape" value="obovate" />
        <character name="shape" value="oblong" />
        <character name="shape" value="lobed" modifier="usually 2-pinnately" />
      </structure>
      <structure id="o19855" name="margin" constraint="ultimate">
        <character name="shape" value="dentate" modifier="usually" />
        <character name="shape" value="entire" modifier="rarely" />
      </structure>
      <structure id="o19856" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="964.txt-7">
      <text>Involucres hemispheric or broader, 12–25+ mm diam.</text>
      <structure id="o19857" name="involucre">
        <character name="shape" value="hemispheric" />
