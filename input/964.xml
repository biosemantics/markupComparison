      <structure id="o19863" name="floret" constraint="ray">
        <character char_type="range_value" name="count" from="13" to="21" upper_restricted="false" />
        <character name="architecture" value="pistillate" />
        <character name="reproduction" value="fertile" />
      </structure>
    </statement>
    <statement id="964.txt-11">
