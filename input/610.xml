      <structure id="o12771" name="head">
        <character char_type="range_value" name="atypical_count" from="1" to="3" to_inclusive="false" />
        <character char_type="range_value" name="count" from="3" to="5" upper_restricted="false" constraint="in arrays" constraintid="o12772" />
