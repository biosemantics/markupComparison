  <description>
    <statement id="842.txt-0">
      <text>Perennials, 5–20 cm (cespitose).</text>
      <structure id="o17715" name="whole_organism">
        <character char_type="range_value" name="size" from="5" from_unit="cm" to="20" to_unit="cm" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="842.txt-1">
      <text>Stems erect, canescent.</text>
      <structure id="o17716" name="stem">
        <character name="orientation" value="erect" />
        <character name="pubescence" value="canescent" />
      </structure>
    </statement>
    <statement id="842.txt-2">
      <text>Leaves mostly basal;</text>
      <structure id="o17717" name="leaf">
        <character name="insertion_or_position" value="basal" modifier="mostly" />
      </structure>
    </statement>
    <statement id="842.txt-3">
      <text>blades (± cuneate, 7–15 mm) entire or apices 3(–5)-toothed or -lobed, faces silvery-canescent.</text>
      <structure id="o17718" name="blade">
        <character name="shape" value="entire" />
        <character name="shape" value="apices" />
      </structure>
      <structure id="o17719" name="apex">
        <character name="shape" value="3(-5)-toothed-or-lobed" />
      </structure>
      <structure id="o17720" name="face">
        <character name="pubescence" value="silvery-canescent" />
      </structure>
    </statement>
    <statement id="842.txt-4">
      <text>Heads usually 2–7 in subcapitate to corymbiform arrays (1–1.5 cm across), sometimes borne singly.</text>
      <structure id="o17721" name="head">
        <character char_type="range_value" name="count" from="2" to="7" modifier="usually" constraint="in arrays" constraintid="o17722" />
        <character name="arrangement" value="singly" modifier="sometimes" />
      </structure>
      <structure id="o17722" name="array">
        <character char_type="range_value" name="architecture" from="subcapitate" to="corymbiform" />
        <character name="architecture" value="subcapitate" />
        <character name="architecture" value="corymbiform" />
      </structure>
    </statement>
    <statement id="842.txt-5">
      <text>Phyllaries 12–16, sparsely tomentose.</text>
      <structure id="o17723" name="phyllary">
        <character char_type="range_value" name="count" from="12" to="16" />
        <character name="pubescence" value="tomentose" modifier="sparsely" />
      </structure>
    </statement>
    <statement id="842.txt-6">
      <text>Involucres 3–5(–7) mm.</text>
      <structure id="o17724" name="involucre">
        <character char_type="range_value" name="atypical_size" from="5" to="7" from_unit="mm" to_unit="mm" from_inclusive="false" />
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="842.txt-7">
      <text>Cypselae 2–2.5 mm (3–5-ribbed, apices with thickened rims, faces glabrous or sparsely gland-dotted).</text>
      <structure id="o17725" name="cypsela">
        <character char_type="range_value" name="size" from="2" from_unit="mm" to="2.5" to_unit="mm" />
      </structure>
    </statement>
    <statement id="842.txt-8">
      <text>2 n = 18.</text>
      <structure id="o17726" name="chromosome">
        <character name="count" value="18" />
      </structure>
    </statement>
  </description>
  <flowering_time>jun</flowering_time>
  <flowering_time>summer</flowering_time>
  <flowering_time>jul</flowering_time>
