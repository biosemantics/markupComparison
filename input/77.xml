      <structure id="o16196" name="phyllary" constraint="outer and middle">
        <character name="orientation" value="appressed" />
      </structure>
      <structure id="o16197" name="spine">
        <character name="orientation" value="spreading" />
        <character name="size" value="slender" />
        <character name="fragility" value="stout" />
        <character char_type="range_value" name="size" from="2" from_unit="mm" to="6" to_unit="mm" />
      </structure>
    </statement>
    <statement id="77.txt-14">
      <text>apices of inner often flexuous, narrow, flat, ± entire, spineless or tipped with weak spines.</text>
      <structure id="o16198" name="apex">
        <character name="course" value="flexuous" modifier="often" />
        <character name="size" value="narrow" />
        <character name="shape" value="flat" />
        <character name="shape" value="entire" modifier="±" />
        <character name="architecture" value="spineless" />
        <character name="architecture" value="tipped with weak spines" />
      </structure>
      <structure id="o16199" name="phyllary" constraint="inner" />
      <relation id="r1740" name="part_of" from="o16198" to="o16199" negation="false" />
      <structure id="o16200" name="spine">
        <character name="texture" value="weak" />
      </structure>
      <relation id="r1741" name="tipped with" from="o16198" to="o16200" negation="false" />
    </statement>
    <statement id="77.txt-15">
      <text>Corollas white to lavender or pink-purple, 23–30 mm, tubes 9–14 mm, throats 5.5–10.5 mm, lobes 5.5–9.5 mm;</text>
      <structure id="o16201" name="corolla">
