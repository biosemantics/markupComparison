        <character name="life_style" value="plant" />
      </structure>
    </statement>
    <statement id="256.txt-1">
      <text>Stems puberulent, glabrescent.</text>
      <structure id="o4392" name="stem">
        <character name="pubescence" value="puberulent" />
        <character name="pubescence" value="glabrescent" />
      </structure>
    </statement>
    <statement id="256.txt-2">
      <text>Leaves mostly cauline;</text>
      <structure id="o4393" name="leaf">
        <character name="insertion_or_position" value="cauline" modifier="mostly" />
      </structure>
    </statement>
    <statement id="256.txt-3">
      <text>blades ± lanceolate, 9–15(–25+) cm × 15–45(–60+) mm, l/w = (3.3–)4–6+, abaxially scabrellous, tomentose, or pannose, resin-gland-dotted, adaxially scabrellous, often resin-gland-dotted.</text>
      <structure id="o4394" name="blade">
        <character name="shape" value="lanceolate" modifier="±" />
        <character char_type="range_value" name="atypical_length" from="15" to="25" from_unit="cm" to_unit="cm" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="length" from="9" from_unit="cm" to="15" to_unit="cm" />
        <character char_type="range_value" name="atypical_width" from="45" to="60" from_unit="mm" to_unit="mm" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="width" from="15" from_unit="mm" to="45" to_unit="mm" />
        <character char_type="range_value" name="atypical_lwratio" from="3.3" to="4" to_inclusive="false" />
        <character char_type="range_value" name="lwratio" from="4" to="6" upper_restricted="false" />
        <character name="relief" value="scabrellous" modifier="abaxially" />
        <character name="pubescence" value="tomentose" />
        <character name="pubescence" value="pannose" />
        <character name="coloration_or_relief" value="resin-gland-dotted" />
        <character name="relief" value="scabrellous" modifier="adaxially" />
        <character name="coloration_or_relief" value="resin-gland-dotted" modifier="often" />
      </structure>
    </statement>
    <statement id="256.txt-4">
      <text>Heads in corymbiform to paniculiform arrays.</text>
      <structure id="o4395" name="head" />
      <structure id="o4396" name="array">
        <character char_type="range_value" name="architecture" from="corymbiform" to="paniculiform" />
        <character name="architecture" value="corymbiform" />
        <character name="architecture" value="paniculiform" />
      </structure>
      <relation id="r603" name="in" from="o4395" to="o4396" negation="false" />
    </statement>
    <statement id="256.txt-5">
      <text>Peduncles 2–35 mm.</text>
      <structure id="o4397" name="peduncle">
        <character char_type="range_value" name="size" from="2" from_unit="mm" to="35" to_unit="mm" />
      </structure>
    </statement>
    <statement id="256.txt-6">
      <text>Involucres ± hemispheric, 6–10 × 7–10 mm.</text>
      <structure id="o4398" name="involucre">
        <character name="shape" value="hemispheric" modifier="±" />
        <character char_type="range_value" name="length" from="6" from_unit="mm" to="10" to_unit="mm" />
        <character char_type="range_value" name="width" from="7" from_unit="mm" to="10" to_unit="mm" />
      </structure>
    </statement>
    <statement id="256.txt-7">
      <text>Phyllaries 35–60+ in 4–6+ series, sparsely tomentulose, glabrescent, margins ciliolate, the outer lanceolate to subulate, 1–3 mm, inner oblong, 7–9+ mm, tips subulate to filiform.</text>
      <structure id="o4399" name="phyllary">
        <character char_type="range_value" name="count" from="35" to="60" upper_restricted="false" constraint="in series" constraintid="o4400" />
        <character name="pubescence" value="tomentulose" modifier="sparsely" />
        <character name="pubescence" value="glabrescent" />
      </structure>
      <structure id="o4400" name="series">
        <character char_type="range_value" name="count" from="4" to="6" upper_restricted="false" />
      </structure>
      <structure id="o4401" name="margin">
        <character name="pubescence" value="ciliolate" />
        <character char_type="range_value" name="shape" from="outer lanceolate" to="subulate" />
        <character name="shape" value="subulate" />
        <character char_type="range_value" name="size" from="1" from_unit="mm" to="3" to_unit="mm" />
        <character name="position" value="inner" />
        <character name="shape" value="oblong" />
        <character char_type="range_value" name="size" from="7" from_unit="mm" to="9" to_unit="mm" upper_restricted="false" />
      </structure>
      <structure id="o4402" name="tip">
        <character char_type="range_value" name="shape" from="subulate" to="filiform" />
        <character name="shape" value="subulate" />
        <character name="shape" value="filiform" />
      </structure>
    </statement>
    <statement id="256.txt-8">
      <text>Florets 30–45(–65).</text>
      <structure id="o4403" name="floret">
        <character char_type="range_value" name="atypical_count" from="45" to="65" from_inclusive="false" />
