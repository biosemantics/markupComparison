  <description>
    <statement id="256.txt-0">
      <text>Plants 8–12(–20) dm.</text>
      <structure id="o4391" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="12" to="20" from_unit="dm" to_unit="dm" from_inclusive="false" />
