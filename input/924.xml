        <character name="shape" value="serrate" />
      </structure>
      <structure id="o18996" name="face">
        <character name="pubescence" value="tomentose" modifier="densely" />
        <character name="pubescence" value="glabrate" modifier="densely" />
      </structure>
    </statement>
    <statement id="924.txt-4">
      <text>Heads (peduncles 0 or to 2 mm) in racemiform arrays 10–15 × 5–15 cm.</text>
      <structure id="o18997" name="head" />
      <structure id="o18998" name="array">
        <character name="architecture" value="racemiform" />
