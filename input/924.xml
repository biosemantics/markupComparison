        <character name="coloration" value="bicolor" />
      </structure>
    </statement>
    <statement id="924.txt-3">
      <text>blades lanceolate, 7–15 × 1–2.5 cm, serrate (teeth ca. 2 mm), faces densely tomentose (abaxial) or glabrate (adaxial).</text>
      <structure id="o18995" name="blade">
        <character name="shape" value="lanceolate" />
        <character char_type="range_value" name="length" from="7" from_unit="cm" to="15" to_unit="cm" />
