      </structure>
    </statement>
    <statement id="924.txt-6">
      <text>Phyllaries lanceolate (margins hyaline), densely tomentose.</text>
      <structure id="o19000" name="phyllary">
        <character name="shape" value="lanceolate" />
        <character name="pubescence" value="tomentose" modifier="densely" />
