        <character name="odor" value="aromatic" modifier="pleasantly" />
        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="924.txt-1">
      <text>Stems 2–5, erect, brown, mostly simple (bases woody), sparsely tomentose.</text>
      <structure id="o18993" name="stem">
        <character char_type="range_value" name="count" from="2" to="5" />
        <character name="orientation" value="erect" />
        <character name="coloration" value="brown" />
