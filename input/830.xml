      </structure>
    </statement>
    <statement id="830.txt-5">
      <text>Phyllaries:</text>
      <structure id="o17505" name="phyllary" />
    </statement>
    <statement id="830.txt-6">
      <text>margins and apices greenish or lacking pigment, abaxial faces ± villous.</text>
      <structure id="o17506" name="margin">
        <character name="coloration" value="greenish" />
      </structure>
      <structure id="o17507" name="apex">
