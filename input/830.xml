        <character name="life_style" value="perennial" />
      </structure>
    </statement>
    <statement id="830.txt-1">
      <text>Stems mostly prostrate (much branched, often forming mats), ± strigoso-sericeous to villous.</text>
      <structure id="o17501" name="stem">
        <character name="orientation" value="prostrate" modifier="mostly" />
        <character char_type="range_value" name="pubescence" from="strigoso-sericeous" to="villous" modifier="±" />
