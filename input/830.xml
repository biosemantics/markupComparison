        <character name="pubescence" value="villous" modifier="±" />
      </structure>
    </statement>
    <statement id="830.txt-2">
      <text>Leaves sessile;</text>
      <structure id="o17502" name="leaf">
        <character name="architecture" value="sessile" />
      </structure>
    </statement>
    <statement id="830.txt-3">
      <text>blades oblong, 1–3(–5) cm, 2–3-pinnately lobed.</text>
      <structure id="o17503" name="blade">
        <character name="shape" value="oblong" />
        <character char_type="range_value" name="atypical_size" from="3" to="5" from_unit="cm" to_unit="cm" from_inclusive="false" />
