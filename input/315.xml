    </statement>
    <statement id="315.txt-11">
      <text>Cypselae (monomorphic or dimorphic) pale brown or yellowish, fusiform, 4–9 mm, outer wider with apices attenuate (not beaked), inner gradually tapered, beaked (beaks 2–5 mm, ± equal to bodies), ribs 10 (narrow);</text>
      <structure id="o5696" name="cypsela">
        <character name="coloration" value="brown" modifier="pale" />
        <character name="coloration" value="yellowish" />
        <character name="shape" value="fusiform" />
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="9" to_unit="mm" />
        <character name="position" value="outer" />
        <character name="size" value="wider" constraint="with apices" constraintid="o5697" />
        <character name="position" value="inner" modifier="gradually" />
        <character name="shape" value="tapered" />
        <character name="shape" value="beaked" />
      </structure>
      <structure id="o5697" name="apex">
        <character name="shape" value="attenuate" />
      </structure>
      <structure id="o5698" name="rib">
        <character name="count" value="10" />
      </structure>
    </statement>
    <statement id="315.txt-12">
      <text>pappi white (fine, soft), 3–6 mm.</text>
      <structure id="o5699" name="pappus">
        <character name="coloration" value="white" />
        <character char_type="range_value" name="size" from="3" from_unit="mm" to="6" to_unit="mm" />
