        <character name="pubescence" value="pubescent" modifier="adaxially" />
      </structure>
    </statement>
    <statement id="514.txt-3">
      <text>Peduncles 0–26 cm, lengths mostly less than 0.5 times leaves at flowering, 0.5–3 times leaves in fruit, ± glabrate, or apically tomentose.</text>
