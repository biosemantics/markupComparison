      </structure>
      <structure id="o10519" name="fruit">
        <character name="STRUCTURE" value="(leaves)" />
        <character char_type="range_value" name="count" from="0.5" to="3" />
      </structure>
    </statement>
    <statement id="514.txt-4">
      <text>Florets 15–30+;</text>
      <structure id="o10520" name="floret">
        <character char_type="range_value" name="count" from="15" to="30" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="514.txt-5">
