    <statement id="213.txt-1">
      <text>Stems 1–few, erect or ascending, openly branched distally, villous to scabrous with septate hairs and loosely tomentose, ± glabrate.</text>
      <structure id="o3334" name="stem">
        <character char_type="range_value" name="count" from="1" to="few" />
        <character name="orientation" value="erect" />
        <character name="orientation" value="ascending" />
        <character name="architecture_or_shape" value="branched" modifier="openly ; distally" />
        <character char_type="range_value" name="pubescence" from="villous" to="scabrous" />
        <character name="pubescence" value="villous" />
        <character name="pubescence" value="scabrous" constraint="with hairs" constraintid="o3335" />
        <character name="pubescence" value="glabrate" modifier="±" />
      </structure>
      <structure id="o3335" name="hair">
        <character name="architecture" value="septate" />
        <character name="pubescence" value="tomentose" modifier="loosely" />
      </structure>
    </statement>
    <statement id="213.txt-2">
      <text>Leaves:</text>
      <structure id="o3336" name="leaf" />
    </statement>
    <statement id="213.txt-3">
      <text>basal and proximal cauline petiolate, blades oblanceolate or elliptic, 5–25 cm, margins entire or shallowly dentate to irregularly pinnately lobed;</text>
