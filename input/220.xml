      </structure>
      <relation id="r497" name="in" from="o3518" to="o3519" negation="false" />
    </statement>
    <statement id="220.txt-6">
      <text>Involucres narrowly ovoid or cylindric, 7–8 × 3–5 mm, falling at maturity with enclosed cypselae.</text>
      <structure id="o3520" name="involucre">
        <character name="shape" value="ovoid" modifier="narrowly" />
        <character name="shape" value="cylindric" modifier="narrowly" />
