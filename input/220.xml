        <character char_type="range_value" name="width" from="3" from_unit="mm" to="5" to_unit="mm" />
        <character name="orientation" value="falling" constraint="at maturity with cypselae" constraintid="o3521" />
      </structure>
      <structure id="o3521" name="cypsela" constraint="enclosed" />
    </statement>
    <statement id="220.txt-7">
      <text>Principal phyllaries:</text>
      <structure id="o3522" name="phyllary" constraint="principal" />
    </statement>
    <statement id="220.txt-8">
      <text>bodies pale green or stramineous, ovate to lanceolate, sometimes purple-tinged, glabrous or finely tomentose, sparsely resin-gland-dotted, margins scarious, appendages spreading, fringed with slender stramineous spines, each tipped by spreading to reflexed spine 1–3 mm.</text>
