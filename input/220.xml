        <character name="shape" value="lanceolate" />
        <character name="coloration" value="tinged" modifier="sometimes;purple" />
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="tomentose" modifier="finely" />
        <character name="coloration_or_relief" value="resin-gland-dotted" modifier="sparsely" />
