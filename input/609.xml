        <character name="pubescence" value="glabrous" modifier="sometimes" />
      </structure>
      <structure id="o12745" name="base" />
    </statement>
    <statement id="609.txt-2">
      <text>Cauline leaves 1–3(–5+), proximal mostly oblanceolate to lance-olate, margins usually pinnately lobed, sometimes dentate or entire, distal ± lanceolate, margins usually pinnately (3–)5–7(–9+)-lobed.</text>
      <structure id="o12746" name="leaf" constraint="cauline">
        <character char_type="range_value" name="atypical_count" from="3" to="5" upper_restricted="false" from_inclusive="false" />
        <character char_type="range_value" name="count" from="1" to="3" />
        <character char_type="range_value" name="shape" from="proximal mostly oblanceolate" to="lance-olate" />
        <character name="shape" value="lance-olate" />
      </structure>
      <structure id="o12747" name="margin">
        <character name="shape" value="lobed" modifier="usually pinnately" />
        <character name="shape" value="dentate" modifier="sometimes" />
        <character name="shape" value="entire" modifier="sometimes" />
        <character name="insertion_or_position" value="distal" modifier="±" />
        <character name="shape" value="lanceolate" />
      </structure>
      <structure id="o12748" name="margin">
        <character name="shape" value="(3-)5-7(-9+)-lobed" modifier="usually pinnately" />
      </structure>
    </statement>
    <statement id="609.txt-3">
      <text>Heads (1–)3–7+ in loose, corymbiform arrays.</text>
      <structure id="o12749" name="head">
