        <character name="shape" value="deltate" />
        <character name="shape" value="dentate" modifier="sharply" />
      </structure>
      <structure id="o4948" name="face">
        <character name="pubescence" value="glabrate" />
      </structure>
    </statement>
    <statement id="280.txt-2">
      <text>Heads 7–22.</text>
      <structure id="o4949" name="head">
        <character char_type="range_value" name="count" from="7" to="22" />
