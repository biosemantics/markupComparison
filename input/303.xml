      <structure id="o5454" name="face">
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" modifier="densely" />
      </structure>
    </statement>
    <statement id="303.txt-5">
      <text>Heads 10–40, in loose, corymbiform arrays.</text>
