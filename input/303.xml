    </statement>
    <statement id="303.txt-1">
      <text>Stems 1, erect, simple, proximally hispid and stipitate-glandular (viscid), distally gla brous.</text>
      <structure id="o5449" name="stem">
        <character name="count" value="1" />
        <character name="orientation" value="erect" />
        <character name="architecture" value="simple" />
        <character name="pubescence" value="hispid" modifier="proximally" />
        <character name="architecture_or_exudation_or_pubescence" value="stipitate-glandular" />
      </structure>
    </statement>
    <statement id="303.txt-2">
      <text>Leaves basal and cauline;</text>
    </statement>
    <statement id="303.txt-3">
      <text>petiolate;</text>
      <structure id="o5450" name="leaf">
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="petiolate" />
      </structure>
    </statement>
    <statement id="303.txt-4">
      <text>blades oblanceolate or runcinate, 1–24 × 1–5 cm, (bases attenuate) margins deeply pinnately lobed to denticulate (lobes triangular, terminal lobes largest), apices obtuse to acute, faces densely stipitate-glandular (viscid).</text>
      <structure id="o5451" name="blade">
        <character name="shape" value="oblanceolate" />
        <character name="shape" value="runcinate" />
        <character char_type="range_value" name="length" from="1" from_unit="cm" to="24" to_unit="cm" />
        <character char_type="range_value" name="width" from="1" from_unit="cm" to="5" to_unit="cm" />
      </structure>
      <structure id="o5452" name="margin">
        <character char_type="range_value" name="shape" from="deeply pinnately lobed" to="denticulate" />
