      </structure>
      <relation id="r715" name="in" from="o5455" to="o5456" negation="false" />
    </statement>
    <statement id="303.txt-6">
      <text>Calyculi of 5–7, ovate or lanceolate, glabrous bractlets 1–2 mm.</text>
      <structure id="o5457" name="calyculus" />
      <structure id="o5458" name="bractlet">
