    </statement>
    <statement id="303.txt-7">
      <text>Involucres cylindric (turbinate in fruit), 8–12 × 3–5 mm.</text>
      <structure id="o5459" name="involucre">
        <character name="shape" value="cylindric" />
        <character char_type="range_value" name="length" from="8" from_unit="mm" to="12" to_unit="mm" />
