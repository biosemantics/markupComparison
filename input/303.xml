      </structure>
      <structure id="o5462" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="303.txt-9">
      <text>Florets 15–30;</text>
      <structure id="o5463" name="floret">
        <character char_type="range_value" name="count" from="15" to="30" />
      </structure>
    </statement>
    <statement id="303.txt-10">
      <text>corollas light yellow, 5–12 mm.</text>
      <structure id="o5464" name="corolla">
        <character name="coloration" value="yellow" modifier="light" />
        <character char_type="range_value" name="size" from="5" from_unit="mm" to="12" to_unit="mm" />
