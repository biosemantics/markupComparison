  <description>
    <statement id="350.txt-0">
      <text>Biennials, (15–)40–200(–450+) cm.</text>
      <structure id="o6532" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="15" to="40" from_unit="cm" to_unit="cm" to_inclusive="false" />
