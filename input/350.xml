        <character name="life_style" value="biennial" />
      </structure>
    </statement>
    <statement id="350.txt-2">
      <text>blades of undivided cauline leaves oblong, obovate, or lanceolate to spatulate or lance-linear, margins entire or denticulate, midribs sometimes sparsely pilose.</text>
      <structure id="o6533" name="blade">
        <character char_type="range_value" name="shape" from="lanceolate" to="spatulate or lance-linear" />
        <character name="shape" value="oblong" />
        <character name="shape" value="obovate" />
        <character name="shape" value="lanceolate" />
        <character name="shape" value="spatulate" />
        <character name="shape" value="lance-linear" />
      </structure>
      <structure id="o6534" name="leaf" constraint="undivided cauline" />
      <relation id="r813" name="part_of" from="o6533" to="o6534" negation="false" />
      <structure id="o6535" name="margin">
        <character name="shape" value="entire" />
        <character name="shape" value="denticulate" />
      </structure>
      <structure id="o6536" name="midrib">
        <character name="pubescence" value="pilose" modifier="sometimes sparsely" />
      </structure>
    </statement>
    <statement id="350.txt-3">
      <text>Heads in ± corymbiform to paniculiform arrays.</text>
      <structure id="o6537" name="head" />
      <structure id="o6538" name="array">
        <character char_type="range_value" name="architecture" from="corymbiform" to="paniculiform" />
