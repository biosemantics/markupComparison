      <structure id="o6539" name="involucre">
        <character char_type="range_value" name="size" from="10" from_unit="mm" to="12" to_unit="mm" upper_restricted="false" />
      </structure>
    </statement>
    <statement id="350.txt-5">
      <text>Phyllaries usually reflexed in fruit.</text>
      <structure id="o6540" name="phyllary">
