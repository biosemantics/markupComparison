        <character name="shape" value="denticulate" />
        <character name="shape" value="dentate" />
      </structure>
    </statement>
    <statement id="335.txt-6">
      <text>Heads borne singly or in loose, corymbiform [paniculiform] arrays.</text>
      <structure id="o6199" name="head">
        <character name="arrangement" value="singly" />
        <character name="arrangement" value="in loose , corymbiform arrays" />
      </structure>
      <structure id="o6200" name="array">
