  <description>
    <statement id="335.txt-0">
      <text>Perennials [annuals or biennials], (5–)10–30+ cm;</text>
    </statement>
    <statement id="335.txt-1">
      <text>taprooted (sometimes rhizomatous; stolons produced in some taxa).</text>
      <structure id="o6194" name="whole_organism">
        <character char_type="range_value" name="atypical_size" from="5" to="10" from_unit="cm" to_unit="cm" to_inclusive="false" />
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="30" to_unit="cm" upper_restricted="false" />
        <character name="life_style" value="perennial" />
        <character name="architecture" value="taprooted" />
      </structure>
    </statement>
    <statement id="335.txt-2">
      <text>Stems (excluding stolons) 1–5+, erect (often scapiform), usually branched distally, glabrous.</text>
      <structure id="o6195" name="stem">
        <character char_type="range_value" name="count" from="1" to="5" upper_restricted="false" />
        <character name="orientation" value="erect" />
        <character name="architecture_or_shape" value="branched" modifier="usually ; distally" />
        <character name="pubescence" value="glabrous" />
      </structure>
    </statement>
    <statement id="335.txt-3">
      <text>Leaves basal and cauline;</text>
    </statement>
    <statement id="335.txt-4">
      <text>petiolate;</text>
      <structure id="o6196" name="leaf">
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="petiolate" />
      </structure>
    </statement>
    <statement id="335.txt-5">
      <text>blades elliptic, oblong, orbiculate, or ovate [lanceolate to oblanceolate or linear], margins entire or denticulate to dentate [pinnately lobed] (faces glabrous [± scabrous]).</text>
      <structure id="o6197" name="blade">
        <character name="shape" value="elliptic" />
        <character name="shape" value="oblong" />
        <character name="shape" value="orbiculate" />
        <character name="shape" value="ovate" />
      </structure>
      <structure id="o6198" name="margin">
