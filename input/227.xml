      </structure>
      <structure id="o3741" name="wing">
        <character name="size" value="narrow" />
      </structure>
      <structure id="o3742" name="tooth">
        <character name="size" value="short" />
      </structure>
    </statement>
    <statement id="227.txt-5">
      <text>Heads disciform, borne singly or in open, few-headed corymbiform arrays, long-pedunculate.</text>
      <structure id="o3743" name="head">
        <character name="shape_or_architecture" value="disciform" />
        <character name="arrangement" value="singly" />
        <character name="arrangement" value="in open , few-headed corymbiform arrays" />
        <character name="architecture" value="long-pedunculate" />
      </structure>
      <structure id="o3744" name="array">
        <character name="architecture" value="open" />
        <character name="architecture_or_shape" value="few-headed" />
        <character name="architecture" value="corymbiform" />
      </structure>
      <relation id="r535" name="in" from="o3743" to="o3744" negation="false" />
    </statement>
    <statement id="227.txt-6">
      <text>Involucres ovoid, 12–30 mm, distally constricted.</text>
