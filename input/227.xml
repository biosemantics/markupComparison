  <common_name>Sicilian star-thistle, sulphur-colored Sicilian thistle, sulphur knapweed</common_name>
  <description>
    <statement id="227.txt-0">
      <text>Annuals , 10–100 cm.</text>
      <structure id="o3730" name="whole_organism">
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="100" to_unit="cm" />
        <character name="life_style" value="annual" />
      </structure>
