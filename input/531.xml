  <description>
    <statement id="531.txt-0">
      <text>Perennials, 10–50 cm;</text>
    </statement>
    <statement id="531.txt-1">
      <text>taprooted.</text>
      <structure id="o10939" name="whole_organism">
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="50" to_unit="cm" />
        <character name="life_style" value="perennial" />
        <character name="architecture" value="taprooted" />
      </structure>
    </statement>
    <statement id="531.txt-2">
      <text>Stems branched proximally and often distally.</text>
      <structure id="o10940" name="stem">
        <character name="architecture_or_shape" value="branched" modifier="proximally; often distally" />
      </structure>
    </statement>
    <statement id="531.txt-3">
      <text>Leaves basal and cauline;</text>
    </statement>
    <statement id="531.txt-4">
      <text>petiolate (petioles broadly winged, clasping);</text>
      <structure id="o10941" name="leaf">
        <character name="insertion_or_position" value="basal" />
        <character name="insertion_or_position" value="cauline" />
        <character name="architecture" value="petiolate" />
      </structure>
    </statement>
    <statement id="531.txt-5">
      <text>blades linear to narrowly oblanceolate, 10–30 cm, margins entire, dentate, or pinnately lobed (lobes narrow, often retrorse).</text>
      <structure id="o10942" name="blade">
        <character char_type="range_value" name="shape" from="linear" to="narrowly oblanceolate" />
        <character name="shape" value="linear" />
        <character name="shape" value="oblanceolate" modifier="narrowly" />
        <character char_type="range_value" name="size" from="10" from_unit="cm" to="30" to_unit="cm" />
      </structure>
      <structure id="o10943" name="margin">
        <character name="shape" value="entire" />
        <character name="shape" value="dentate" />
        <character name="shape" value="lobed" modifier="pinnately" />
      </structure>
    </statement>
    <statement id="531.txt-6">
      <text>Peduncles erect (10–50 cm), ebracteate or leafy.</text>
      <structure id="o10944" name="peduncle">
        <character name="orientation" value="erect" />
        <character name="architecture" value="ebracteate" />
        <character name="architecture" value="leafy" />
      </structure>
    </statement>
    <statement id="531.txt-7">
      <text>Involucres narrowly ovoid in fruit, 8–17 mm.</text>
      <structure id="o10945" name="involucre">
        <character name="shape" value="ovoid" modifier="narrowly" constraint="in fruit" constraintid="o10946" />
        <character char_type="range_value" name="size" from="8" from_unit="mm" to="17" to_unit="mm" />
      </structure>
      <structure id="o10946" name="fruit" />
    </statement>
    <statement id="531.txt-8">
      <text>Phyllaries:</text>
    </statement>
    <statement id="531.txt-9">
      <text>sometimes purple-spotted, apices erect, acuminate, abaxial faces glabrous or scurfy-puberulent, often black-villous;</text>
      <structure id="o10947" name="phyllary">
        <character name="coloration" value="spotted" modifier="sometimes;purple" />
      </structure>
      <structure id="o10948" name="apex">
        <character name="orientation" value="erect" />
        <character name="shape" value="acuminate" />
      </structure>
      <structure id="o10949" name="face" constraint="abaxial">
        <character name="pubescence" value="glabrous" />
        <character name="pubescence" value="scurfy-puberulent" />
        <character name="pubescence" value="black-villous" modifier="often" />
      </structure>
    </statement>
    <statement id="531.txt-10">
      <text>outer lanceolate to deltate;</text>
      <structure id="o10950" name="phyllary" constraint="outer" />
    </statement>
    <statement id="531.txt-11">
      <text>inner lanceolate.</text>
      <structure id="o10951" name="phyllary" constraint="inner">
        <character name="shape" value="lanceolate" />
      </structure>
    </statement>
    <statement id="531.txt-12">
      <text>Florets 8–30;</text>
      <structure id="o10952" name="floret">
        <character char_type="range_value" name="count" from="8" to="30" />
      </structure>
    </statement>
    <statement id="531.txt-13">
      <text>corollas yellow, surpassing phyllaries by 5+ mm.</text>
      <structure id="o10953" name="corolla">
        <character name="coloration" value="yellow" />
      </structure>
