        <character char_type="range_value" name="size" from="0.2" to="0.25" constraint="times bodies" constraintid="o3505" />
      </structure>
      <structure id="o3505" name="body" />
      <structure id="o3506" name="face">
        <character name="pubescence" value="glabrous" />
      </structure>
      <structure id="o3507" name="beak">
        <character name="pubescence" value="hairy" />
      </structure>
